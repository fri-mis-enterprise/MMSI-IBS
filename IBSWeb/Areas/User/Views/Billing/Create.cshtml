@using IBS.Utility.Constants
@model CreateBillingViewModel

@{
    ViewData["Title"] = "Billing - Create";
}

<style>
    .container {
        max-width: 100% !important;
        width: 100% !important;
    }

    .section-header {
        font-size: 1rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
    }

    /* Custom styles for professional look */
    .table th {
        font-weight: 600;
        color: #374151;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.025em;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }

    table {
        font-size: 10px !important;
        table-layout: auto !important;
    }

    table td {
        font-size: 12px !important;
        padding-left: 10px !important;
    }

    .card-body {
        margin: 5px !important;
        padding: 5px !important;
    }

    .totals-box {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1rem;
        border: 1px solid #dee2e6;
    }
</style>

<link rel="stylesheet" href="~/css/form-style.css">

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">@ViewData["Title"]</h2>
        </div>
    </div>
    
    <div class="card-body">
        <form id="myForm" method="post" enctype="multipart/form-data">
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                
                <!-- I. Customer & Settlement -->
                <h5 class="section-header text-secondary border-bottom"><i class="bi bi-person-check me-2"></i>I. Customer & Settlement</h5>
                <div class="row">
                    <div class="form-group col-md-3 col-12 my-2">
                        <label class="control-label ps-1 pb-1">Customer<span class="required text-danger">*</span></label>
                        <select asp-for="CustomerId" id="CustomerId" asp-items="@Model.Customers" class="form-select js-select2 border-0 shadow ms-5 mt-4" style="width:100%" required>
                            <option value="">Select Customer</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-12">
                        <div id="PrincipalDiv" class="d-none row">
                            <div class="col-6" style="height: 72px;">
                                <div class="row">
                                    <div id="SelectDiv" class="form-group col-12 my-2 d-none">
                                        <label for="PrincipalSelect" class="control-label ps-1 pb-1">Principal<span class="required text-danger">*</span></label>
                                        <select asp-for="PrincipalId" id="PrincipalSelect" class="form-select js-select2 border-0 shadow ms-5 mt-4" style="width:100%">
                                            <option value="">Select Principal</option>
                                        </select>
                                        <span asp-validation-for="PrincipalId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-check col-6 ps-2 my-2 text-center d-flex align-items-center justify-content-start">
                                <input class="form-check-input m-0 ms-2" type="checkbox" id="UsePrincipalCheckbox" @(Model.PrincipalId.HasValue ? "checked" : "")>
                                <label class="text-decoration-underline form-check-label ps-1 h4 m-0" for="UsePrincipalCheckbox" style="font-size: 20px;">
                                    Use Principal
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-12 ps-2 my-2 d-none hiddenDiv">
                        <div class="row">
                            <div class="col text-start">
                                <input asp-for="BilledTo" class="isVatable" value="LOCAL" type="radio">
                                <label style="font-size: 20px;" class="ms-1" asp-for="BilledTo">Billed To Local</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col text-start">
                                <input asp-for="BilledTo" class="isExempt" value="PRINCIPAL" type="radio">
                                <label style="font-size: 20px;" class="ms-1" asp-for="BilledTo">Billed To Principal</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- II. Reference Information -->
                <h5 class="section-header text-secondary border-bottom"><i class="bi bi-info-circle me-2"></i>II. Reference Information</h5>
                <div class="row">
                    <div class="form-floating col-md-3 col-12 my-2">
                        <input class="form-control border-0 shadow bg-light" id="Address" placeholder=" " readonly>
                        <label class="ms-2">Address</label>
                    </div>
                    <div class="form-floating col-md-3 col-6 my-2">
                        <input class="form-control border-0 shadow bg-light" id="TIN" placeholder=" " readonly>
                        <label class="ms-2">TIN</label>
                    </div>
                    <div class="form-floating col-md-3 col-6 my-2">
                        <input class="form-control border-0 shadow bg-light" id="BusinessStyle" placeholder=" " readonly>
                        <label class="ms-2">Business Style</label>
                    </div>
                    <div class="form-floating col-md-3 col-6 my-2">
                        <input class="form-control border-0 shadow bg-light" id="Terms" placeholder=" " readonly>
                        <label class="ms-2">Terms</label>
                    </div>
                </div>
                
                <!-- III. Billing Details -->
                <h5 class="section-header text-secondary border-bottom"><i class="bi bi-receipt me-2"></i>III. Billing Details</h5>
                <div class="row">
                    <div class="form-floating col-md-3 col-6 my-3">
                        <input asp-for="MMSIBillingNumber" type="text" class="form-control border-0 shadow" id="billingNumber" placeholder=" ">
                        <label asp-for="MMSIBillingNumber" for="billingNumber" id="status" class="ms-2">Billing Number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="MMSIBillingNumber" class="text-danger"></span>
                    </div>
                    <div class="form-check col-md-3 col-6 ps-2 my-3 text-center d-flex align-items-center justify-content-start">
                        <input type="hidden" asp-for="IsUndocumented" />
                        <input class="form-check-input m-0 ms-2" type="checkbox" id="isUndocumentedCheckbox" @(Model.IsUndocumented ? "checked" : "")>
                        <label class="text-decoration-underline form-check-label ps-1 h4 m-0" for="isUndocumentedCheckbox" style="font-size: 20px;">
                            Undocumented
                        </label>
                    </div>
                    <div class="form-floating col-md-3 col-6 my-3">
                        <input asp-for="VoyageNumber" type="text" class="form-control border-0 shadow" id="VoyageNumber" placeholder=" " required>
                        <label asp-for="VoyageNumber" for="VoyageNumber" class="ms-2">Voyage Number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="VoyageNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-3 col-6 my-3">
                        <input asp-for="Date" type="date" value="@(Model.Date != default ? Model.Date.ToString("yyyy-MM-dd") : DateTimeHelper.GetCurrentPhilippineTime().ToString("yyyy-MM-dd"))" class="form-control border-0 shadow">
                        <label asp-for="Date" class="ms-2">Date Created</label>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                
                <!-- IV. Operation Details -->
                <h5 class="section-header text-secondary border-bottom"><i class="bi bi-geo-alt me-2"></i>IV. Operation Details</h5>
                <div class="row">
                    <div class="form-group col-md-3 col-6 my-2">
                        <label class="control-label ps-1 pb-1">Port<span class="required text-danger">*</span></label>
                        <select asp-for="PortId" asp-items="@Model.Ports" id="PortSelect" class="form-select js-select2 border-0 shadow ms-5 mt-4" style="width:100%" required>
                            <option value="">Select Port</option>
                        </select>
                        <span asp-validation-for="PortId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-6 my-2">
                        <label class="control-label ps-1 pb-1">Terminal<span class="required text-danger">*</span></label>
                        <select asp-for="TerminalId" asp-items="@Model.Terminals" id="TerminalSelect" class="form-select js-select2 border-0 shadow ms-5 mt-4" style="width:100%" required>
                            <option value="">Select Terminal</option>
                        </select>
                        <span asp-validation-for="TerminalId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-6 my-2">
                        <label class="control-label ps-1 pb-1">Vessel<span class="required text-danger">*</span></label>
                        <select asp-for="VesselId" asp-items="@Model.Vessels" class="form-select js-select2 border-0 shadow ms-5 mt-4" style="width:100%" required>
                            <option value="">Select Vessel</option>
                        </select>
                        <span asp-validation-for="VesselId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-3 col-6 my-2">
                        <input asp-for="ApOtherTug" step="0.01" type="number" class="form-control border-0 shadow" placeholder=" " min="0">
                        <label asp-for="ApOtherTug" class="ms-2">AP Other Tug</label>
                        <span asp-validation-for="ApOtherTug" class="text-danger"></span>
                    </div>
                </div>

                <!-- V. Itemized Dispatch Tickets -->
                <h5 class="section-header text-secondary border-bottom"><i class="bi bi-list-check me-2"></i>V. Itemized Dispatch Tickets</h5>
                <div class="row pt-1">
                    <div class="form-group col-12">
                        <label class="control-label mb-2">Choose dispatch tickets to bill:</label>
                        <select asp-for="ToBillDispatchTickets" id="DispatchTicketSelect" class="form-control js-example-basic-multiple col-12" name="ToBillDispatchTickets" multiple="multiple" disabled>
                        </select>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="dataTable" class="table table-striped table-bordered mt-3" style="width:100%">
                        <thead>
                        <tr>
                            <th class="text-center align-content-center">DISPATCH#</th>
                            <th class="text-center align-middle">TUGBOAT</th>
                            <th class="text-center align-middle">SERVICE</th>
                            <th class="text-center align-middle">TIME START</th>
                            <th class="text-center align-middle">TIME END</th>
                            <th class="text-center align-middle">HOUR</th>
                            <th class="text-center align-middle">DISPATCH RATE</th>
                            <th class="text-center align-middle">DISPATCH AMOUNT</th>
                            <th class="text-center align-middle">BAF RATE</th>
                            <th class="text-center align-middle">BAF AMOUNT</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                
                <div class="row py-3 justify-content-end d-flex">
                    <div class="col-md-6 col-12 totals-box shadow-sm">
                        <div class="row text-center">
                            <div class="col-4">
                                <label class="fw-bold small text-muted text-uppercase">Total Dispatch</label><br/>
                                <span class="fw-bold">₱ <span id="DispatchAmountTotal">0.00</span></span>
                            </div>
                            <div class="col-4 border-start">
                                <label class="fw-bold small text-muted text-uppercase">Total BAF</label><br/>
                                <span class="fw-bold">₱ <span id="BAFAmountTotal">0.00</span></span>
                            </div>
                            <div class="col-4 border-start">
                                <label class="fw-bold small text-muted text-uppercase text-success">Total Amount</label><br/>
                                <span class="fw-bold text-success" style="font-size: 1.1rem;">₱ <span id="OverallTotal">0.00</span></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-12 justify-content-end my-4 gap-2">
                    <div class="text-center" style="width: 200px">
                        <button class="btn btn-primary custom-btn w-100 shadow" type="submit" id="submitButton"><i class="bi bi-pencil-square"></i> Submit</button>
                    </div>
                    <div class="text-center" style="width: 200px">
                        <a class="btn btn-outline-primary w-100 shadow" asp-controller="Billing" asp-action="Index">
                            <i class="bi bi-arrow-90deg-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let multiSelectVariable = $('.js-example-basic-multiple');
            multiSelectVariable.select2();

            let table = initializeDataTable('#dataTable');

            setupEventListeners();
            
            // Startup logic
            handleCheckboxChange();
            if ($("#CustomerId").val()) {
                handleCustomerStartup();
            }

            function initializeDataTable(selector) {
                if ($.fn.DataTable.isDataTable(selector)) {
                    $(selector).DataTable().destroy();
                }
                return $(selector).DataTable({
                    paging: false,
                    info: false,
                    order: [[0, 'asc']],
                    lengthChange: false,
                    searching: false
                });
            }

            function setupEventListeners() {
                $("#isUndocumentedCheckbox").on("change", handleCheckboxChange);
                $("#UsePrincipalCheckbox").on("change", handleUsePrincipalChange);
                $("#PrincipalSelect").on("change.select2", handlePrincipalChange);
                $("#CustomerId").on("change", handleCustomerChange);
                $("#PortSelect").on("change", handlePortChange);
                $("#submitButton").on("click", areYouSureToBill);
                multiSelectVariable.on('change', handleDispatchTicketsChange);
            }

            function handleCheckboxChange() {
                const $checkbox = $("#isUndocumentedCheckbox");
                const $inputField = $("#billingNumber");
                const $status = $("#status");
                const $hiddenInput = $("#IsUndocumented");

                $hiddenInput.val($checkbox.is(":checked") ? "true" : "false");
                
                if ($checkbox.is(":checked")) {
                    $status.text("Undocumented");
                    $inputField.prop("required", false).prop("disabled", true);
                    $inputField.val("");
                } else {
                    $status.html("Billing Number<span class=\"required text-danger\">*</span>");
                    $inputField.prop("required", true).prop("disabled", false);
                }
            }

            function handleUsePrincipalChange() {
                let customerIdVariable = $("#CustomerId");
                const $checkbox = $("#UsePrincipalCheckbox");
                const $selectDiv = $("#SelectDiv");
                const customerId = customerIdVariable.val();

                if ($checkbox.is(":checked")) {
                    fetchPrincipals(customerId);
                    $selectDiv.removeClass("d-none");
                } else {
                    $selectDiv.addClass("d-none");
                    handleCustomerChange(); // Re-trigger normal customer data fetch
                }
            }

            function fetchPrincipals(customerId, selectedPrincipalId = null) {
                return $.ajax({
                    url: '@Url.Action("GetPrincipalsJSON", "Billing", new { area = "User" })',
                    type: "GET",
                    data: { customerId: customerId },
                    success: function (data) {
                        const $principalSelect = $("#PrincipalSelect");
                        $principalSelect.empty().append('<option value="">Select Principal</option>');
                        if (Array.isArray(data) && data.length > 0) {
                            $.each(data, function (index, item) {
                                $principalSelect.append($('<option>', {
                                    value: item.value,
                                    text: item.text,
                                    selected: item.value == selectedPrincipalId
                                }));
                            });
                        }
                    }
                });
            }

            function handlePrincipalChange() {
                const principalId = $("#PrincipalSelect").val();
                if (!principalId) return;
                $.ajax({
                    url: '@Url.Action("GetPrincipalDetails", "Billing", new { area = "User" })',
                    method: "GET",
                    data: { principalId: principalId },
                    success: function (data) {
                        updateFields(data);
                    }
                });
            }

            function handleCustomerChange() {
                const customerId = $("#CustomerId").val();
                const $principalDiv = $("#PrincipalDiv");
                const $selectDiv = $("#SelectDiv");
                const $dispatchSelect = $("#DispatchTicketSelect");
                const $hiddenDiv = $(".hiddenDiv");
                const $isUndocCheckbox = $("#isUndocumentedCheckbox");
                
                $principalDiv.addClass("d-none");
                $selectDiv.addClass("d-none");
                $("#UsePrincipalCheckbox").prop("checked", false);

                if (customerId) {
                    $dispatchSelect.prop("disabled", false);
                    $dispatchSelect.val(null).trigger("change");
                    $hiddenDiv.removeClass("d-none");
                    
                    $.ajax({
                        url: '@Url.Action("GetCustomerDetails", "Billing", new { area = "User" })',
                        method: "POST",
                        data: { customerId: customerId },
                        success: function (data) {
                            updateFields(data);
                            $principalDiv.toggleClass("d-none", !data.hasPrincipal);
                            $(".isVatable").prop("checked", data.vatType === "@SD.VatType_Vatable");
                            $(".isExempt").prop("checked", data.vatType === "@SD.VatType_Exempt");
                            $isUndocCheckbox.prop("checked", data.isUndoc === "Undocumented");
                            handleCheckboxChange();
                        }
                    });
                    
                    fetchDispatchTickets(customerId);
                } else {
                    $hiddenDiv.addClass("d-none");
                    $dispatchSelect.val(null).trigger("change").prop("disabled", true);
                }
            }

            async function handleCustomerStartup() {
                const customerId = $("#CustomerId").val();
                const $principalDiv = $("#PrincipalDiv");
                const $selectDiv = $("#SelectDiv");
                const $dispatchSelect = $("#DispatchTicketSelect");
                const $hiddenDiv = $(".hiddenDiv");
                
                if (customerId) {
                    $dispatchSelect.prop("disabled", false);
                    $hiddenDiv.removeClass("d-none");
                    
                    // 1. Fetch Basic Customer Details
                    await $.ajax({
                        url: '@Url.Action("GetCustomerDetails", "Billing", new { area = "User" })',
                        method: "POST",
                        data: { customerId: customerId },
                        success: function (data) {
                            $principalDiv.toggleClass("d-none", !data.hasPrincipal);
                            if (!$("#UsePrincipalCheckbox").is(":checked")) {
                                updateFields(data);
                            }
                        }
                    });

                    // 2. If using principal, fetch its details
                    const principalId = '@Model.PrincipalId';
                    if ($("#UsePrincipalCheckbox").is(":checked") && principalId) {
                        $selectDiv.removeClass("d-none");
                        await fetchPrincipals(customerId, principalId);
                        handlePrincipalChange();
                    }

                    // 3. Fetch tickets list and then update the table for already selected ones
                    await fetchDispatchTickets(customerId, @Html.Raw(Json.Serialize(Model.ToBillDispatchTickets)));
                }
            }

            function fetchDispatchTickets(customerId, selectedIds = null) {
                return $.ajax({
                    url: '@Url.Action("GetDispatchTicketsByCustomer", "Billing", new { area = "User" })',
                    method: "GET",
                    data: { customerId: customerId },
                    success: function (data) {
                        const $dispatchSelect = $("#DispatchTicketSelect");
                        $dispatchSelect.empty();
                        if (Array.isArray(data) && data.length > 0) {
                            $.each(data, function (index, item) {
                                let selected = selectedIds && selectedIds.includes(parseInt(item.value));
                                $dispatchSelect.append($('<option>', {
                                    value: item.value,
                                    text: item.text,
                                    selected: selected
                                }));
                            });
                        }
                        $dispatchSelect.trigger("change");
                    }
                });
            }

            function updateFields(data) {
                $("#Terms").val(data?.terms || '');
                $("#Address").val(data?.address || '');
                $("#TIN").val(data?.tinNo || '');
                $("#BusinessStyle").val(data?.businessStyle || '');
            }

            function handlePortChange() {
                const portId = $("#PortSelect").val();
                $.ajax({
                    url: '@Url.Action("ChangeTerminal", "DispatchTicket", new { area = "User" })',
                    type: "GET",
                    data: { portId: portId },
                    success: function (data) {
                        const $terminalSelect = $("#TerminalSelect");
                        $terminalSelect.empty().append('<option value="">Select Terminal</option>');
                        if (Array.isArray(data)) {
                            $.each(data, function (index, item) {
                                $terminalSelect.append($('<option>', { value: item.value, text: item.text }));
                            });
                        }
                    }
                });
            }

            function handleDispatchTicketsChange() {
                const selectedTickets = $("#DispatchTicketSelect").val();
                if (!selectedTickets || selectedTickets.length === 0) {
                    updateDispatchTable([]);
                    return;
                }
                $.ajax({
                    url: '/MMSI/Billing/GetDispatchTickets',
                    type: 'POST',
                    data: { dispatchTicketIds: selectedTickets },
                    success: function (result) {
                        updateDispatchTable(result.data);
                    }
                });
            }

            function updateDispatchTable(data) {
                let totalDispatchAmount = 0;
                let totalBAFAmount = 0;

                table.destroy();
                const $tbody = $('#dataTable tbody').empty();

                $.each(data || [], function (index, value) {
                    totalDispatchAmount += value.dispatchNetRevenue;
                    totalBAFAmount += value.bafNetRevenue;
                    $tbody.append(`
                        <tr>
                            <td class="text-center align-middle">${value.dispatchNumber}</td>
                            <td class="text-center align-middle">${value.tugboat?.tugboatName || '-'}</td>
                            <td class="text-center align-middle">${value.service?.serviceName || '-'}</td>
                            <td class="text-center align-middle">${value.dateLeft} ${value.timeLeft}</td>
                            <td class="text-center align-middle">${value.dateArrived} ${value.timeArrived}</td>
                            <td class="text-center align-middle">${(value.totalHours || 0).toFixed(2)}</td>
                            <td class="text-center align-middle">₱ ${formatNumber(value.dispatchRate)}</td>
                            <td class="text-center align-middle">₱ ${formatNumber(value.dispatchNetRevenue)}</td>
                            <td class="text-center align-middle">₱ ${formatNumber(value.bafRate)}</td>
                            <td class="text-center align-middle">₱ ${formatNumber(value.bafNetRevenue)}</td>
                        </tr>
                    `);
                });

                $("#DispatchAmountTotal").text(formatNumber(totalDispatchAmount));
                $("#BAFAmountTotal").text(formatNumber(totalBAFAmount));
                $("#OverallTotal").text(formatNumber(totalDispatchAmount + totalBAFAmount));

                table = initializeDataTable('#dataTable');
            }

            function areYouSureToBill (event) {
                event.preventDefault();
                const form = document.getElementById("myForm");
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }
                
                Swal.fire({
                    title: "Submit Billing?",
                    text: "Review all details before proceeding.",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonText: "Yes, submit"
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                })
            }
        });
    </script>
}
