@model IBS.Models.MMSI.MasterFile.MMSIPort

@{
    ViewData["Title"] = "Port - Edit";
}

<link rel="stylesheet" href="~/css/form-style.css">

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center text-white">
            <h2>
                @ViewData["Title"]
            </h2>
        </div>
    </div>
    
    <div class="card-body">
        <form method="post" class="row">
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <input asp-for="PortId" value="@Model.PortId" style="display: none" />
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="PortName" value="@Model.PortName" type="text" class="form-control border-0 shadow" id="PortName" placeholder="Name" required>
                        <label asp-for="PortName" for="PortName" class="ms-2">Port name<span class="required text-danger">*</span></label>
                        <span asp-validation-for="PortName" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 my-3">
                        <input asp-for="PortNumber" value="@Model.PortNumber" type="text" class="form-control border-0 shadow" id="PortNumber" placeholder="Number" required>
                        <label asp-for="PortNumber" for="PortNumber" class="ms-2">Port number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="PortNumber" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="HasSBMA" class="ms-2">Has SBMA (15%)?</label> Click check box if yes. <input asp-for="HasSBMA" type="checkbox" >
                    </div>
                </div>
            </div>
            <div class="row justify-content-end mt-3">
                <div class="text-center" style="width: 250px;">
                    <button class="btn btn-primary custom-btn col-12" type="submit" id="submitButton"> Submit</button>
                </div>
                <div class="text-center" style="width: 250px;">
                    <a class="btn btn-outline-primary border col-12" asp-controller="Port" asp-action="Index">
                        Go Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>