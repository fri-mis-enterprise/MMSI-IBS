@using IBS.Models.Enums
@using IBS.Utility.Constants
@model IEnumerable<FilprideCheckVoucherDetail>
@{
    ViewData["Title"] = "Check Voucher Non-Trade Payroll Invoice";
}

<link rel="stylesheet" href="~/css/index-style.css">

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center bg-secondary p-3 rounded shadow">
        <div class="d-flex align-items-center">
            <h2 class="text-white m-0">@ViewData["Title"]</h2>
        </div>
        <div class="dropdown actions-dropdown">
            <a asp-area="User" asp-controller="CheckVoucherNonTradePayrollInvoice" asp-action="Create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> New Invoice
            </a>
        </div>
    </div>
    <div class="card shadow border-0 mt-3">
        <div class="card-body p-3">
            <div class="me-2">
                <label class="fw-semibold small text-muted mb-1">Filter by Date</label>
                <input type="date" id="inputDate" class="form-control rounded-3 shadow-sm" style="width:150px;">
            </div>
            <div class="table-responsive" style="max-height: 70vh">
                <table class="table table-hover mb-0" id="paginatedTable">
                    <thead class="bg-light">
                    <tr>
                        <th class="text-start">Invoice#</th>
                        <th class="text-start">Date</th>
                        <th class="text-start">Payee</th>
                        <th class="text-start">Payable Amount</th>
                        <th class="text-start">Amount Paid</th>
                        <th class="text-start">Balance</th>
                        <th class="text-start">Status</th>
                        <th class="text-center" style="width: 100px;">Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr class="bg-secondary text-white fw-bold">
                        <td class="py-3"></td>
                        <td class="py-3"></td>
                        <td class="text-end py-3">
                            <span class="text-uppercase">Grand Total:</span>
                        </td>
                        <td class="text-start py-3" id="totalAmount"></td>
                        <td class="text-start py-3" id="totalAmountPaid"></td>
                        <td class="text-start py-3" id="totalBalance"></td>
                        <td class="py-3"></td>
                        <td class="py-3"></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmVoid(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Void", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })/' + id,
                        type: 'POST',
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        success: function() { window.location.reload(); },
                        error: function() { Swal.fire('Error', 'Something went wrong.', 'error'); }
                    });
                }
            })
        }
    </script>
    <script>
        function confirmCancel(id) {
            Swal.fire({
                title: "Please Input Remarks",
                html: "<input id='cancellationRemarks' type='text' class='swal2-input' placeholder='Remarks'>",
                focusConfirm: false,
                allowEscapeKey: false,
                allowOutsideClick: false,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Cancel", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })',
                        type: 'POST',
                        data: { id: id, cancellationRemarks: $("#cancellationRemarks").val() },
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        success: function() { window.location.reload(); },
                        error: function() { Swal.fire('Error', 'Something went wrong.', 'error'); }
                    });
                }
            })
        }
    </script>
    <script>
        $(document).ready(function () {
            let filterValue = localStorage.getItem('filterDate') || "";
            $('#inputDate').val(filterValue);
            
            let table = $('#paginatedTable').DataTable({
                "processing": true,
                "serverSide": true,
                "stateSave": true,
                "stateDuration": 86400,
                "language": {
                    "processing": `<div class="d-flex justify-content-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                 </div>`
                },
                "ajax": {
                    "url": "@Url.Action("GetInvoiceCheckVouchers", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })",
                    "type": "POST",
                    "data": function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),

                            // NEW PARAMETER FOR DATE â€” this goes to controller
                            filterDate: filterValue
                        });
                    },
                    "error": function (xhr, error, thrown) {
                        console.error('DataTables error:', error);
                        alert('An error occurred while loading the data');
                    }
                    
                },
                "preDrawCallback": function(settings) {
                    $('#paginatedTable').addClass('table-loading');
                },
                "drawCallback": function(settings) {
                    $('#paginatedTable').removeClass('table-loading');

                    // Initialize all tooltips
                    $('[data-bs-toggle="tooltip"]').tooltip();
                },
                "columns": [
                    { 
                        "data": "transactionNo",
                        "name": "transactionNo"
                    },
                    {
                        "data": "date",
                        "name": "date",
                        "render": function (data, type, row) {
                            // Assuming 'Date' is in ISO format like "2024-07-12T00:00:00"
                            var date = new Date(data);
                            return date.toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'short',
                                day: '2-digit' 
                            });
                        }
                    },
                    { 
                        "data": "payee",
                        "name": "payee",
                    },
                    {
                        "data": "amount",
                        "name": "amount",
                        "render": function (data, type, row) {
                            var amount = $.fn.dataTable.render.number(',', '.', 2).display(row.amount);
                            return `<span class="d-block fw-medium">${amount}</span>`;
                        }
                    },
                    {
                        "data": "amountPaid",
                        "name": "amountPaid",
                        "render": function (data, type, row) {
                            var amount = $.fn.dataTable.render.number(',', '.', 2).display(row.amountPaid);
                            return `<span class="d-block fw-medium">${amount}</span>`;
                        }
                    },
                    {
                        "orderable": false,
                        "render": function (data, type, row) {
                            var amount = $.fn.dataTable.render.number(',', '.', 2).display((row.amount - row.amountPaid));
                            return `<span class="d-block fw-medium">${amount}</span>`;
                        }
                    },
                    {
                        "data": "status",
                        "name": "status",
                        "render": function (data, type, row) {
                            var statusClass = data === "@nameof(CheckVoucherInvoiceStatus.ForApproval)" ? "bg-secondary" :
                                data === "@nameof(CheckVoucherInvoiceStatus.ForPayment)" ? "bg-info" :
                                    data === "@nameof(CheckVoucherInvoiceStatus.Voided)" ? "bg-danger" :
                                        data === "@nameof(CheckVoucherInvoiceStatus.Paid)" ? "bg-success" :
                                            data === "@nameof(CheckVoucherInvoiceStatus.Canceled)" ? "bg-warning" : "";

                            return `<span class="badge rounded-pill ${statusClass}">${row.status}</span>`;
                        }
                    },
                    {
                        "data": "checkVoucherHeaderId",
                        "name": "checkVoucherHeaderId",
                        "orderable": false,
                        "render": function (data, type, row) {
                            return `<div class="dropdown actions-dropdown" style="${row.voidedBy != null || row.canceledBy != null ? 'display:none;' : ''}">
                                    <button class="btn btn-light btn-sm dropdown-toggle w-100"
                                            type="button"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        ${row.status === "@nameof(CheckVoucherInvoiceStatus.ForApproval)" ? `
                                            <li><a class="dropdown-item" href="@Url.Action("Edit", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })/${row.checkVoucherHeaderId}">Edit</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("Print", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })?id=${row.checkVoucherHeaderId}&supplierId=${row.subAccountId}">Preview</a></li>
                                            <li><a class="dropdown-item" href="javascript:void(0);" onclick="confirmCancel(${row.checkVoucherHeaderId})">Cancel</a></li>
                                        ` : row.status === "@nameof(CheckVoucherInvoiceStatus.ForPosting)" ? `
                                            <li><a class="dropdown-item" href="@Url.Action("Edit", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })/${row.checkVoucherHeaderId}">Edit</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("Print", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })?id=${row.checkVoucherHeaderId}&supplierId=${row.subAccountId}">Preview</a></li>
                                            <li><a class="dropdown-item" href="javascript:void(0);" onclick="confirmCancel(${row.checkVoucherHeaderId})">Cancel</a></li>
                                        ` : `
                                            <li><a class="dropdown-item" href="@Url.Action("Print", "CheckVoucherNonTradePayrollInvoice", new { area = "User" })?id=${row.checkVoucherHeaderId}&supplierId=${row.subAccountId}">Preview</a></li>
                                            ${!row.isPaid ? `
                                                <li><a class="dropdown-item" href="javascript:void(0);" onclick="confirmVoid(${row.checkVoucherHeaderId})">Void</a></li>
                                            ` : `
                                                <li><button class="dropdown-item" disabled readonly>Void</button></li>
                                            `}
                                        `}
                                    </ul>
                                </div>`;
                        }
                    }
                ],
                "order": [[0, "asc"]],
                "pageLength": 10,
                "footerCallback": function (row, data, start, end, display) {
                    // Initialize totals
                    var totalAmount = 0;
                    var totalAmountPaid = 0;
                    var totalBalance = 0;

                    // Sum up columns
                    data.forEach(function (row) {
                        var amount = row.amount;
                        var amountPaid = row.amountPaid;
                        totalAmount += amount;
                        totalAmountPaid += amountPaid;
                        totalBalance += amount - amountPaid;
                    });
                    
                    // Update footer with totals
                    $(this.api().column(3).footer()).html(formatNumber(totalAmount));
                    $(this.api().column(4).footer()).html(formatNumber(totalAmountPaid));
                    $(this.api().column(5).footer()).html(formatNumber(totalBalance));
                }
            });

            $('#inputDate').on('change', function() {
                filterValue = $(this).val();
                localStorage.setItem('filterDate', filterValue); // persist the date
                table.ajax.reload();
            });
        });
    </script>
}