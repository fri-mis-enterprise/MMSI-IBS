@model IEnumerable<Product>

@{
    ViewData["Title"] = "Sales Invoice - Export";
}
<style>
    .container {
        max-width: 100% !important;
        width: 100% !important;
    }

    /* Custom styles for professional look */
    .table th {
        font-weight: 600;
        color: #374151;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.025em;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }

    .table-loading {
        position: relative;
        opacity: 0.6;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.8em;
        font-size: 0.75rem;
    }

    .actions-dropdown .dropdown-item {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }

    .actions-dropdown .dropdown-item:hover {
        background-color: #f3f4f6;
    }
</style>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">PRODUCT</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 table-responsive">
        <div class="row pb-3">
            <div class="col-6">
                <div class="row g-3 align-items-end">
                    <div class="col-auto">
                        <label class="fw-semibold small text-muted mb-1">Filter by Date</label><br/>
                        <label class="fw-semibold small text-muted mb-1">Date From</label>
                        <input type="date" id="dateFrom" class="form-control rounded-3 shadow-sm" style="width:150px;">
                    </div>

                    <div class="col-auto">
                        <label class="fw-semibold small text-muted mb-1">Date To</label>
                        <input type="date" id="dateTo" class="form-control rounded-3 shadow-sm" style="width:150px;">
                    </div>
                </div>
            </div>
            <div class="col-6 text-end">
                <p>
                    <button type="button" class="btn btn-primary" onclick="exportToExcel()">Export Selected to CSV</button>
                </p>
            </div>
        </div>

        <table class="table table-bordered table-hover" id="productTable">
            <thead class="table-secondary">
            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductUnit)
                </th>
                <th>
                    CREATED BY
                </th>
                <th>
                    CREATED DATE
                </th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        let selectedRecords = new Set();
        $(document).ready(function () {
            let table = $('#productTable').DataTable({
                processing: true,
                serverSide: false,
                stateSave: true,
                ajax: {
                    url: '@Url.Action("GetProducts", "Product")',
                    type: 'POST',
                    data: function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        });
                    },
                    error: function (xhr) {
                        console.log(xhr.responseText);
                    }
                },
                columns: [
                    {data: 'productId', orderable: false, searchable: false, render: DataTable.render.select()},
                    { data: 'productCode' },
                    { data: 'productName' },
                    { data: 'productUnit' },
                    { data: 'createdBy' },
                    {
                        "data": "createdDate",
                        "name": "createdDate",
                        "render": function (data) {
                            let date = new Date(data);
                            return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' });
                        }
                    }
                ],
                select: {
                    style: 'multi',
                    selector: 'td:first-child'
                },
                order: [[1, 'desc']]
            });

            table.on('select deselect', function(e, dt, type, indexes) {
                if (type === 'row') {
                    indexes.forEach(function(idx) {
                        let id = table.row(idx).data().productId;
                        selectedRecords[e.type === 'select' ? 'add' : 'delete'](id);
                    });
                }
            });

            $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                let getDateFrom = $('#dateFrom');
                let getDateTo = $('#dateTo');
                let dateFrom = getDateFrom.val() ? new Date(getDateFrom.val()) : null;
                let dateTo = getDateTo.val() ? new Date(getDateTo.val()) : null;
                let transactionDate = new Date(data[5]);

                // Remove time part
                if (dateFrom) dateFrom.setHours(0,0,0,0);
                if (dateTo) dateTo.setHours(0,0,0,0);
                transactionDate.setHours(0,0,0,0);

                return (dateFrom === null || transactionDate >= dateFrom) &&
                    (dateTo === null || transactionDate <= dateTo);
            });

            $('#dateFrom, #dateTo').on('change', function() {
                $('#productTable').DataTable().draw();
            });
        });
        
        function exportToExcel() {
            let selectedIds = Array.from(selectedRecords).join(',');
            
            if (selectedIds) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Export", "Product")';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'selectedRecord';
                input.value = selectedIds;
                
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = $('input[name="__RequestVerificationToken"]').val();

                form.appendChild(input);
                form.appendChild(tokenInput);
                document.body.appendChild(form);
                form.submit();
            } else {
                alert('No Product selected.');
            }
        }
    </script>
}
