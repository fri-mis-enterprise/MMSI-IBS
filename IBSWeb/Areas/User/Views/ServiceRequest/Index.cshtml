@model IEnumerable<MMSIDispatchTicket>

@{
    ViewData["Title"] = "Service Request";
}

<style>
    .container {
        max-width: 100% !important;
        width: 100% !important;
    }

    /* Custom styles for professional look */
    .table th {
        font-weight: 600;
        color: #374151;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.025em;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }

    .table-loading {
        position: relative;
        opacity: 0.6;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.8em;
        font-size: 0.75rem;
    }

    .actions-dropdown .dropdown-item {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }

    .actions-dropdown .dropdown-item:hover {
        background-color: #f3f4f6;
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center bg-secondary p-3 rounded shadow">
        <h2 class="text-white m-0">@ViewData["Title"]</h2>
        <a asp-area="User" asp-controller="ServiceRequest" asp-action="Create" class="btn btn-light shadow-sm">
            <i class="bi bi-plus-circle"></i> Create Request
        </a>
    </div>

    <div class="card shadow border-0 mt-3">
        <div class="card-body p-3">
            <div class="table-responsive" style="max-height: 70vh">
                <div class="btn-group mb-3 shadow-sm" role="group" aria-label="Filter Options">
                    <button id="filterAll" class="btn btn-outline-primary active">
                        <i class="bi bi-list"></i> All
                    </button>
                    <button id="filterForPosting" class="btn btn-outline-primary">
                        <i class="bi bi-check-circle"></i> For Posting
                    </button>
                    <button id="filterIncomplete" class="btn btn-outline-primary">
                        <i class="bi bi-dash-circle"></i> Incomplete
                    </button>
                    <button id="filterCancelled" class="btn btn-outline-primary">
                        <i class="bi bi-x-circle"></i> Cancelled
                    </button>
                </div>
                <table class="table table-hover mb-0" id="paginatedTable">
                    <thead class="bg-light">
                    <tr>
                        <th data-orderable="false" class="px-3 py-1 text-center align-content-center"><input type="checkbox" id="selectAll"></th>
                        <th class="text-start">DATE</th>
                        <th class="text-start">COS #</th>
                        <th class="text-start">DISPATCH/ <br/> MOORING TICKET</th>
                        <th class="text-start">DATE/TIME START</th>
                        <th class="text-start">DATE/TIME END</th>
                        <th class="text-start">ACTIVITY/ <br/>SERVICE TYPE</th>
                        <th class="text-start">PORT-<br/> TERMINAL</th>
                        <th class="text-start">TUGBOAT</th>
                        <th class="text-start">CUSTOMER</th>
                        <th class="text-start">VESSEL</th>
                        <th class="text-start">STATUS</th>
                        <th class="text-center" style="width: 100px;">Actions</th>
                    </tr>
                    </thead>
                </table>

                <div class="row m-0 p-0 justify-content-end mt-3 gap-2">
                    <div style="width: 200px;">
                        <button class="btn btn-primary w-100 shadow selected-options" id="postSelected" style="display:none"><i class="bi bi-check-circle"></i> Post Selected</button>
                    </div>
                    <div style="width: 200px;">
                        <button class="btn btn-outline-danger w-100 shadow selected-options" id="cancelSelected" style="display:none"><i class="bi bi-x-circle"></i> Cancel Selected</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const selectedRecords = new Set();

        function toggleSelectAll(selectAllCheckbox) {
            const checkboxes = document.querySelectorAll(".selectCheckbox");
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAllCheckbox.checked;
                if (selectAllCheckbox.checked) selectedRecords.add(checkbox.value);
                else selectedRecords.delete(checkbox.value);
            });
            toggleButtons();
        }

        function toggleButtons() {
            const anyChecked = selectedRecords.size > 0;
            $(".selected-options").toggle(anyChecked);
        }

        $(document).ready(function () {
            const editUrl = '@Url.Action("Edit", "ServiceRequest")';

            let table = $('#paginatedTable').DataTable({
                "order": [[1, 'asc']],
                "columnDefs": [
                    { "orderable": false, "targets": [0, 12] }
                ],
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("GetDispatchTicketLists", "ServiceRequest", new { area = "User" })",
                    "type": "POST",
                    "data": function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        });
                    }
                },
                "preDrawCallback": () => $('#paginatedTable').addClass('table-loading'),
                "drawCallback": () => $('#paginatedTable').removeClass('table-loading'),
                "columns": [
                    {
                        "data": null,
                        "render": (data, type, row) => {
                            const isChecked = selectedRecords.has(String(row.dispatchTicketId)) ? 'checked' : '';
                            return (row.status !== "Cancelled" && row.status !== "Incomplete") 
                                ? `<div class="text-center"><input type="checkbox" class="selectCheckbox" value="${row.dispatchTicketId}" ${isChecked}></div>`
                                : `<div class="text-center"><input type="checkbox" disabled></div>`;
                        }
                    },
                    {"data": "date"},
                    {"data": "cosNumber"},
                    {"data": "dispatchNumber"},
                    {
                        "data": "dateLeft",
                        "render": (data, type, row) => row.dateLeft ? `${row.dateLeft} ${row.timeLeft || ""}` : ""
                    },
                    {
                        "data": "dateArrived",
                        "render": (data, type, row) => row.dateArrived ? `${row.dateArrived} ${row.timeArrived || ""}` : ""
                    },
                    {"data": "service.serviceName"},
                    {
                        "data": null,
                        "render": (data, type, row) => {
                            const p = row.terminal?.port?.portName || "";
                            const t = row.terminal?.terminalName || "";
                            return p || t ? `${p} - ${t}` : "";
                        }
                    },
                    {"data": "tugboat.tugboatName"},
                    {
                        "data": "customer.customerName",
                        "render": (data, type, row) => row.customer?.customerName || '<span class="text-muted italic small">(Not Assigned)</span>'
                    },
                    {"data": "vessel.vesselName"},
                    {
                        "data": "status",
                        "render": (data, type, row) => {
                            let color = row.status === "For Posting" ? "bg-info" : "bg-secondary";
                            return `<span class="badge rounded-pill ${color} text-white">${row.status}</span>`;
                        }
                    },
                    {
                        "data": null,
                        "render": (data, type, row) => {
                            let actions = `<div class="d-flex justify-content-center"><div style="width:120px;">`;
                            if (row.imageName || row.videoName) {
                                actions += `<div class="dropdown w-100">
                                    <button class="btn btn-sm btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">Actions</button>
                                    <ul class="dropdown-menu shadow">
                                        ${row.status !== "Cancelled" ? `<li><a class="dropdown-item" href="${editUrl}?id=${row.dispatchTicketId}"><i class="bi bi-pencil-square"></i> Edit</a></li>` : ""}
                                        ${row.imageName ? `<li><a class="dropdown-item view-upload" href="#" data-uploadname="${row.imageSignedUrl}"><i class="bi bi-image"></i> View Image</a></li>` : ""}
                                        ${row.videoName ? `<li><a class="dropdown-item view-video" href="#" data-videolink="${row.videoSignedUrl}"><i class="bi bi-play-circle"></i> Play Video</a></li>` : ""}
                                    </ul>
                                </div>`;
                            } else {
                                actions += `<a class="btn btn-sm btn-primary w-100 shadow-sm" href="${editUrl}?id=${row.dispatchTicketId}"><i class="bi bi-pencil-square"></i> Edit</a>`;
                            }
                            return actions + `</div></div>`;
                        }
                    }
                ]
            });

            // Handlers
            $(document).on("click", "#selectAll", function () { toggleSelectAll(this); });
            $(document).on("change", ".selectCheckbox", function() {
                if (this.checked) selectedRecords.add(this.value);
                else selectedRecords.delete(this.value);
                toggleButtons();
                $("#selectAll").prop("checked", $(".selectCheckbox").length === $(".selectCheckbox:checked").length);
            });

            $("#postSelected").click(() => {
                Swal.fire({ title: "Post selected?", text: "Proceed to post these requests?", showCancelButton: true }).then((r) => {
                    if (r.isConfirmed) window.location.href = `@Url.Action("PostSelected", "ServiceRequest")?records=${encodeURIComponent(JSON.stringify(Array.from(selectedRecords)))}`;
                });
            });

            $("#cancelSelected").click(() => {
                Swal.fire({ title: "Cancel selected?", text: "This action cannot be undone.", icon: 'warning', showCancelButton: true }).then((r) => {
                    if (r.isConfirmed) window.location.href = `@Url.Action("CancelSelected", "ServiceRequest")?records=${encodeURIComponent(JSON.stringify(Array.from(selectedRecords)))}`;
                });
            });

            $(document).on("click", ".view-upload", function () {
                Swal.fire({ imageUrl: $(this).data("uploadname"), imageAlt: "Upload", showConfirmButton: false, background: "transparent" });
            });

            $(document).on("click", ".view-video", function () {
                Swal.fire({ html: `<video width="100%" controls autofocus><source src="${$(this).data("videolink")}" type="video/mp4"></video>`, showConfirmButton: false, background: "transparent", width: "80%" });
            });

            // Filter logic
            $('.btn-group button').on('click', function() {
                $('.btn-group button').removeClass('active');
                $(this).addClass('active');
                const filter = $(this).attr('id').replace('filter', '');
                table.columns(11).search(filter === 'All' ? '' : filter).draw();
            });
        });
    </script>
}
