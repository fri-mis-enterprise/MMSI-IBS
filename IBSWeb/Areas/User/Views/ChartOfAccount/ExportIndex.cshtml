@model IEnumerable<FilprideChartOfAccount>
@{
    ViewData["Title"] = "Chart of Account - Export";
}
<link rel="stylesheet" href="~/css/index-style.css">

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 table-responsive">
        <div class="row pb-3">
            <div class="col-6">
                <div class="row g-3 align-items-end">
                    <div class="col-auto">
                        <label class="fw-semibold small text-muted mb-1">Filter by Date</label><br/>
                        <label class="fw-semibold small text-muted mb-1">Date From</label>
                        <input type="date" id="dateFrom" class="form-control rounded-3 shadow-sm" style="width:150px;">
                    </div>

                    <div class="col-auto">
                        <label class="fw-semibold small text-muted mb-1">Date To</label>
                        <input type="date" id="dateTo" class="form-control rounded-3 shadow-sm" style="width:150px;">
                    </div>
                </div>
            </div>
            <div class="col-6 text-end">
                <p>
                    <button type="button" class="btn btn-primary" onclick="exportToExcel()">Save to Excel</button>
                </p>
            </div>
        </div>

        <table class="table table-bordered table-hover" id="chartOfAccountTable">
            <thead class="table-secondary">
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
                <th>@Html.DisplayNameFor(model => model.AccountName)</th>
                <th>@Html.DisplayNameFor(model => model.AccountType)</th>
                <th>@Html.DisplayNameFor(model => model.NormalBalance)</th>
                <th>@Html.DisplayNameFor(model => model.Level)</th>
                <th>CREATED DATE</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        let selectedRecords = new Set();
        
        $(document).ready(function () {
            // Load persisted date filters from localStorage
            let dateFromValue = localStorage.getItem('exportCOADateFrom') || "";
            let dateToValue = localStorage.getItem('exportCOADateTo') || "";
            $('#dateFrom').val(dateFromValue);
            $('#dateTo').val(dateToValue);
            
            let table = $('#chartOfAccountTable').DataTable({
                processing: true,
                serverSide: true,      // ENABLE SERVER-SIDE PROCESSING
                stateSave: true,
                stateDuration: 86400,  // 24 hours
                lengthMenu: [ [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"] ],
                language: {
                    processing: `<div class="d-flex justify-content-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                 </div>`
                },
                ajax: {
                    url: '@Url.Action("GetChartOfAccountList", "ChartOfAccount", new { area = "User" })',
                    type: 'POST',
                    data: function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                            // Pass date filters to server
                            dateFrom: $('#dateFrom').val() || null,
                            dateTo: $('#dateTo').val() || null
                        });
                    },
                    error: function (xhr) {
                        console.error('DataTables error:', xhr.responseText);
                        alert('An error occurred while loading the data');
                    }
                },
                columns: [
                    {
                        data: 'accountId', 
                        orderable: false, 
                        searchable: false,
                        name: 'accountId',
                        render: DataTable.render.select()
                    },
                    { 
                        data: 'accountNumber',
                        name: 'accountNumber'
                    },
                    { 
                        data: 'accountName',
                        name: 'accountName'
                    },
                    { 
                        data: 'accountType',
                        name: 'accountType'
                    },
                    { 
                        data: 'normalBalance',
                        name: 'normalBalance'
                    },
                    {
                        data: 'level',
                        name: 'level',
                        render: function (data) {
                            return parseInt(data, 10);
                        }
                    },
                    {
                        data: "createdDate",
                        name: "createdDate",
                        render: function (data) {
                            let date = new Date(data);
                            return date.toLocaleDateString('en-US', { 
                                year: 'numeric', 
                                month: 'short', 
                                day: '2-digit' 
                            });
                        }
                    }
                ],
                select: {
                    style: 'multi',
                    selector: 'td:first-child'
                },
                order: [[1, 'desc']],
                pageLength: 10
            });

            // Handle row selection
            table.on('select deselect', function(e, dt, type, indexes) {
                if (type === 'row') {
                    indexes.forEach(function(idx) {
                        let id = table.row(idx).data().accountId;
                        selectedRecords[e.type === 'select' ? 'add' : 'delete'](id);
                    });
                }
            });

            // Handle date filter changes
            $('#dateFrom, #dateTo').on('change', function() {
                // Persist the date values
                localStorage.setItem('exportCOADateFrom', $('#dateFrom').val());
                localStorage.setItem('exportCOADateTo', $('#dateTo').val());
                
                // Reload table with new date filters
                table.ajax.reload();
            });
        });
        
        function exportToExcel() {
            let selectedIds = Array.from(selectedRecords).join(',');
            
            if (selectedIds) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Export", "ChartOfAccount", new { area = "User" })';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'selectedRecord';
                input.value = selectedIds;

                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = $('input[name="__RequestVerificationToken"]').val();

                form.appendChild(input);
                form.appendChild(tokenInput);
                document.body.appendChild(form);
                form.submit();
            } else {
                alert('No Chart of Account selected.');
            }
        }
    </script>
}