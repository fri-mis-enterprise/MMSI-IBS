@model Company

@{
    ViewData["Title"] = "Company - Deactivate";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="CompanyId" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="CompanyName" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="CompanyName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CompanyAddress" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="CompanyAddress" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CompanyTin" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="CompanyTin" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="BusinessStyle" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="BusinessStyle" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Deactivate</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="User" asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
