@model IEnumerable<FilprideTerms>

@{
    ViewData["Title"] = "Payment Terms";
}

<link rel="stylesheet" href="~/css/index-style.css">

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center bg-secondary p-3 rounded shadow">
        <h2 class="text-white m-0">@ViewData["Title"]</h2>
        <a asp-area="Filpride" asp-controller="PaymentTerm" asp-action="Create" class="btn btn-light">
            <i class="bi bi-plus-circle"></i> Create New Terms
        </a>
    </div>

    <div class="card shadow border-0 mt-3">
        <div class="card-body p-3">
            <div class="table-responsive" style="max-height: 70vh">
                <table class="table table-hover mb-0" id="paginatedTable">
                    <thead class="bg-light">
                    <tr>
                        <th class="text-start">Terms Code</th>
                        <th class="text-start">Days</th>
                        <th class="text-start">Months</th>
                        <th></th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        // Event listeners
        $(document).ready(function () {
            const editUrl = '@Url.Action("Edit", "PaymentTerm", new { area = "Filpride" })';

            var table = $('#paginatedTable').DataTable({
                "order": [[0, 'asc']],
                "columnDefs": [
                    { "orderable": false, "targets": [3] }
                ],
                "processing": true,
                "serverSide": true,
                "stateDuration": 86400,
                "language": {
                    "processing": `<div class="d-flex justify-content-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                 </div>`
                },
                "ajax": {
                    "url": "@Url.Action("GetPaymentTerms", "PaymentTerm", new { area = "Filpride" })",
                    "type": "POST",
                    "data": function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        });
                    },
                    "error": function (xhr, error, thrown) {
                        console.error('DataTables error:', error);
                        alert('An error occurred while loading the data');
                    }
                },
                "preDrawCallback": function (settings) {
                    $('#paginatedTable').addClass('table-loading');
                },
                "drawCallback": function (settings) {
                    $('#paginatedTable').removeClass('table-loading');

                    // Initialize all tooltips
                    $('[data-bs-toggle="tooltip"]').tooltip();
                },
                "columns": [
                    {
                        "data": "termsCode"
                    },
                    {
                        "data": "numberOfDays"
                    },
                    {
                        "data": "numberOfMonths"
                    },
                    {
                        "data": "null",
                        "orderable": false,
                        "render": function(data, type, row) {
                            let actions = `<div class="w-100 btn-group" role="group">`;

                            actions += `<a class="btn btn-primary mx-2" href="${editUrl}?code=${row.termsCode}"><i class="bi bi-pencil-square"></i> Edit</a>`;
                            actions += `<a class="btn btn-danger mx-2" href="javascript:void(0);" onclick="confirmDelete('${row.termsCode}')">Delete</a>`;

                            actions += `</div>`;
                            return actions;
                        }
                    }
                ]
            });
        });
    </script>
    <script>
        function confirmDelete(termsCode) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Replace with the actual URL that you want to redirect to
                    let url = `@Url.Action("Delete", "PaymentTerm", new { area = "Filpride" })?code=${termsCode}`;
                    window.location.href = url;
                }
            })
        }
    </script>
}