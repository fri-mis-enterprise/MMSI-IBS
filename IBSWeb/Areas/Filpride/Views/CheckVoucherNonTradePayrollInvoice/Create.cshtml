@using IBS.Models.Enums
@model CheckVoucherNonTradeInvoicingViewModel

@{
    ViewData["Title"] = "Check Voucher Non-Trade Payroll Invoice - Create";
}

<link rel="stylesheet" href="~/css/form-style.css">

<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="control-label">Type<span class="required">*</span></label>
                    <select asp-for="Type" class="form-select js-select2 border-0 shadow" style="width:100%; max-height: 200px;" required>
                        <option value="" selected disabled>Select type</option>
                        @foreach (DocumentType documentType in Enum.GetValues<DocumentType>())
                        {
                            <option value="@documentType">@documentType.ToString()</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TransactionDate" class="control-label"></label><span class="required">*</span>
                    <input asp-for="TransactionDate"
                           type="Date"
                           class="form-control"
                           value="@DateTimeHelper.GetCurrentPhilippineTime().ToString("yyyy-MM-dd")"
                           min="@Model.MinDate.ToString("yyyy-MM-dd")"/>
                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Supplier<span class="required">*</span></label>
                    <select asp-for="SupplierId" asp-items="@Model.Suppliers" class="form-select js-select2 supplier" style="width:100%" required>
                        <option></option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="PoNo" class="form-control" placeholder="Input po no" style="height: 100px"></textarea>
                    <label asp-for="PoNo" class="control-label ms-2">PO No</label>
                    <span asp-validation-for="PoNo" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="SiNo" class="form-control" placeholder="Input si no" style="height: 100px"></textarea>
                    <label asp-for="SiNo" class="control-label ms-2">Supplier Invoice No</label>
                    <span asp-validation-for="SiNo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Total" class="control-label"></label><span class="required">*</span>
                    <input asp-for="Total" id="totalAmount" class="form-control money inputAmount" value="" placeholder="0.0000"/>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Upload File (Optional)</label>
                    <input name="file" type="file" class="form-control"/>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="Particulars" class="form-control" placeholder="Leave a remarks here" style="height: 100px"></textarea>
                    <label asp-for="Particulars" class="control-label ms-2">Particulars<span class="required">*</span></label>
                    <span asp-validation-for="Particulars" class="text-danger"></span>
                </div>
                <input type="hidden" id="StartDate" name="StartDate"/>
                <input type="hidden" id="NumberOfYears" name="NumberOfYears" value="0"/>
                <div class="form-group">
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#AddAccEntry">
                        Add Entry
                    </button>
                    <div class="table-responsive">
                        <table class="table" style="min-width: 800px">
                            <thead>
                            <tr>
                                <th>Account No.</th>
                                <th>Account Title</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Sub Acct</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody id="accountingEntriesBody">
                                @for (var i = 0; i < Model.PayrollAccountingEntries?.Count; i++)
                                {
                                    <tr data-index="@i">
                                        <td>
                                            <input type="text" name="PayrollAccountingEntries[@i].AccountNumber" value="@Model.PayrollAccountingEntries[i].AccountNumber" style="border:none" class="w-100" readonly/>
                                        </td>
                                        <td>
                                            <input type="text" name="PayrollAccountingEntries[@i].AccountTitle" value="@Model.PayrollAccountingEntries[i].AccountTitle" style="border:none" class="w-100" readonly />
                                        </td>
                                        <td>
                                            <input name="PayrollAccountingEntries[@i].Debit" value="@Model.PayrollAccountingEntries[i].Debit.ToString("N4")" style="border:none" class="w-100 money editable-amount" oninput="updateTotalDebitAndCredit()" />
                                        </td>
                                        <td>
                                            <input name="PayrollAccountingEntries[@i].Credit" value="@Model.PayrollAccountingEntries[i].Credit.ToString("N4")" style="border:none" class="w-100 money editable-amount" oninput="updateTotalDebitAndCredit()" />
                                        </td>
                                        <td>
                                            <input name="PayrollAccountingEntries[@i].MultipleSupplierCodeName"
                                                   value="@Model.PayrollAccountingEntries[i].MultipleSupplierCodeName" 
                                                   style="border:none" class="w-100" readonly />
                                            <input name="PayrollAccountingEntries[@i].MultipleSupplierId" 
                                                   type="hidden" 
                                                   value="@Model.PayrollAccountingEntries[i].MultipleSupplierId"/>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            <tr>
                                <td class="text-end" colspan="2">TOTAL:</td>
                                <td class="totalDebit">0.0000</td>
                                <td class="totalCredit">0.0000</td>
                                <td></td>
                                <td></td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <br/>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Filpride" asp-controller="CheckVoucherNonTradeInvoice" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="AddAccEntry" data-bs-backdrop="static" tabindex="-1" aria-labelledby="AddAccEntryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="AddAccEntryLabel">Add Accounting Entry</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Account No.</label>
                        <select id="AccountNo" asp-items="@Model.ChartOfAccounts" class="form-select" style="width: 100%">
                            <option></option>
                        </select>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group pt-4">
                        <label class="control-label">Debit</label>
                        <input id="debit" value="0.0000" class="form-control moneyInput" placeholder="0.0000" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group pt-4">
                        <label class="control-label">Credit</label>
                        <input id="credit" value="0.0000" class="form-control moneyInput" placeholder="0.0000" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-12" id="categoryContainer">
                            
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="modalClose" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="calculateButton" onclick="saveAccountingEntry(event)">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#AccountNo, #Category').select2({
                dropdownParent: $('#AddAccEntry'),
                placeholder: "Select an option...",
                allowClear: true,
                width: 'resolve',
                theme: 'classic'
            });
            
            // Initialize totals on page load
            updateTotalDebitAndCredit();
        })
    </script>
    <script>
        let suppliers = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Suppliers));

        function seeIfNeedSupplier (event){
            let accountNumber = $("#AccountNo").val();
            let debit = parseNumber($("#debit").val());
            let credit = parseNumber($("#credit").val());
            let selectionGroup = $("#selectionGroup");

            let newRow = `
                            <div class="form-group pt-4" id="categoryGroup">
                                <label class="control-label">Select Category</label>
                                <select id="Category" name="Category" class="form-select" style="width: 100%"></select>
                                <span class="text-danger"></span>
                            </div>`;
            
            if (accountNumber === "201030550" || accountNumber === "201030510" || accountNumber === "201030600" || accountNumber === "202010200" || accountNumber === "101020500" || accountNumber === "201030700"){
                if (selectionGroup.length === 0) {
                    showSupplierSelectList();
                }
            }
            else {
                if (selectionGroup.length !== 0) {
                    selectionGroup.remove();
                }
            }
        }

        function showSupplierSelectList (event){
            let selectionGroup = $("#selectionGroup");
            let multipleSupplierSelect = $("#MultipleSupplierId");
            
            $.ajax({
                url: '@Url.Action("GetNonTradeSupplierSelectList", "CheckVoucherNonTradePayrollInvoice")',
                type: "GET",
                success: function (data) {
                    if (Array.isArray(data) && data.length > 0) {
                        let newRow = `
                        <div class="form-group pt-4" id="selectionGroup">
                            <label class="control-label">Select Supplier</label>
                            <select name='MultipleSupplierId' id="MultipleSupplierId" class='form-select js-select2 w-100'></select>
                            <span class="text-danger"></span>
                        </div>`;

                        $("#categoryContainer").append(newRow);

                        $('#MultipleSupplierId').select2({
                            dropdownParent: $('#AddAccEntry'),
                            placeholder: "Select an option...",
                            allowClear: true,
                            width: 'resolve',
                            theme: 'classic'
                        });

                        $("#MultipleSupplierId").append('<option>');

                        $.each(data, function (index, item) {
                            $("#MultipleSupplierId").append($('<option>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    }
                }
            });
        }
        
        function saveAccountingEntry(event) {
            // Get the values from the modal inputs
            var accountNumber = $("#AccountNo").val();
            var text = $("#AccountNo option:selected").text();
            var accountNumberText = text.split(' ').slice(2).join(' ');
            var debit = parseNumber($("#debit").val());
            var credit = parseNumber($("#credit").val());
            var multipleSupplierId = safeVal("#MultipleSupplierId");
            var multipleSupplierCodeName = safeText("#MultipleSupplierId option:selected");
            var category = safeVal("#Category");

            if (debit === 0 && credit === 0) {
                event.preventDefault();
                alert('Please input amount');
                return;
            } else if (accountNumberText === "") {
                event.preventDefault();
                alert('Please select Account No.!');
                return;
            }
            
            if ($("#MultipleSupplierId").length !== undefined){
                if ($("#MultipleSupplierId option:selected").val() === "") {
                    event.preventDefault();
                    alert('Please select a sub-account');
                    return;
                }
            }

            // Format debit and credit values with commas and two decimal places
            var formattedDebit = formatNumber(debit);
            var formattedCredit = formatNumber(credit);

            // Get the current index for the new entry
            var currentIndex = $("#accountingEntriesBody tr").length;

            // Create a new row with proper model binding
            var newRow = `<tr data-index="${currentIndex}">
                                <td>
                                    <input type='text' name='PayrollAccountingEntries[${currentIndex}].AccountNumber' value='${accountNumber}' style='border:none' class='w-100' readonly/>
                                </td>
                                <td>
                                    <input type='text' name='PayrollAccountingEntries[${currentIndex}].AccountTitle' value='${accountNumberText}' style='border:none' class='w-100' readonly />
                                </td>
                                <td><input name='PayrollAccountingEntries[${currentIndex}].Debit' value='${formattedDebit}' style='border:none' class='w-100 money editable-amount' oninput='updateTotalDebitAndCredit()' /></td>
                                <td><input name='PayrollAccountingEntries[${currentIndex}].Credit' value='${formattedCredit}' style='border:none' class='w-100 money editable-amount' oninput='updateTotalDebitAndCredit()' /></td>
                                <td>
                                    <input value='${multipleSupplierCodeName}' style='border:none' class='w-100' readonly />
                                    <input name='PayrollAccountingEntries[${currentIndex}].MultipleSupplierId' type='hidden' value='${multipleSupplierId}'/>
                                    <input name='PayrollAccountingEntries[${currentIndex}].MultipleSupplierCodeName' type='hidden' value='${multipleSupplierCodeName}'/>
                                </td>
                                <td><button type='button' class='btn btn-danger btn-sm' onclick='removeRow(this)'>Remove</button></td>
                            </tr>`;

            // Append the new row to the table body
            $("#accountingEntriesBody").append(newRow);

            // Close the modal
            $("#AddAccEntry").modal("hide");

            // Clear the modal inputs
            $("#AccountNo").val("");
            $("#AccountNo").trigger("change");
            $("#Debit").val("0.0000");
            $("#Credit").val("0.0000");

            updateTotalDebitAndCredit();
        }

        function safeVal(selector) {
            var element = $(selector);
            return element.length ? (element.val() || "") : "";
        }

        function safeText(selector) {
            var element = $(selector);
            return element.length ? (element.text() || "") : "";
        }

        function updateTotalDebitAndCredit() {
            var totalDebit = 0;
            var totalCredit = 0;

            // Loop through each row in the table body and sum up the debit values
            $("#accountingEntriesBody tr, .defaultEntry tr").each(function () {
                var debitInput = $(this).find("td:eq(2) input").val();
                var creditInput = $(this).find("td:eq(3) input").val();
                debitInput = debitInput ? String(debitInput) : "";
                creditInput = creditInput ? String(creditInput) : "";

                var debit = parseNumber(debitInput);
                var credit = parseNumber(creditInput);

                totalDebit += debit;
                totalCredit += credit;
            });

            // Display the total debit value
            $(".totalDebit").text(formatNumber(totalDebit));
            $(".totalCredit").text(formatNumber(totalCredit));
            $("#debit").val("0.0000");
            $("#credit").val("0.0000");
            if ($("#selectionGroup").length !== 0) {
                $("#selectionGroup").remove();
            }
            if ($("#categoryGroup").length !== 0) {
                $("#categoryGroup").remove();
            }
            
            validateDebitAndCredit();
        }

        // Function to remove the corresponding row and reindex
        function removeRow(button) {
            // Remove the row
            $(button).closest("tr").remove();
            
            // Reindex all remaining rows
            reindexRows();
            
            updateTotalDebitAndCredit();
        }
        
        // Function to reindex all rows after deletion
        function reindexRows() {
            $("#accountingEntriesBody tr").each(function(index) {
                $(this).attr('data-index', index);
                
                // Update all input names with the new index
                $(this).find('input[name^="PayrollAccountingEntries"]').each(function() {
                    var name = $(this).attr('name');
                    var fieldName = name.substring(name.indexOf('].') + 2);
                    $(this).attr('name', 'PayrollAccountingEntries[' + index + '].' + fieldName);
                });
            });
        }
    
    </script>
    <script>
        function validateDebitAndCredit() {
            var totalDebit = parseNumber($(".totalDebit").text());
            var totalCredit = parseNumber($(".totalCredit").text());
            var totalValue = parseFloat($("#totalAmount").val()) || 0;
            var errorMessage = "";
            var isValid = true;
            let hasValidSubaccount = false;
            const rows = document.querySelectorAll("#accountingEntriesBody tr");
            const requiredTitle = "AP-Non Trade Payable";

            for (const row of rows) {
                const titleInput = row.querySelector("input[name*='AccountTitle']");
                const creditInput = row.querySelector("input[name*='Credit']");

                if (!titleInput || !creditInput) continue;

                const title = titleInput.value.trim();
                const credit = parseFloat(creditInput.value.replace(/,/g, "")) || 0;
                
                if (title === requiredTitle && credit > 0) {
                    hasValidSubaccount = true;
                }
            }

            if ($("#balance-error-message").length === 0) {
                $("#accountingEntriesBody").after('<div id="balance-error-message" class="text-danger mt-2"></div>');
            }

            if (totalDebit !== totalCredit) {
                errorMessage = "Debit and Credit totals must be equal.";
                isValid = false;
            } else if (totalDebit === 0 || totalCredit === 0) {
                errorMessage = "Debit and Credit cannot be zero.";
                isValid = false;
            } else if (totalValue !== totalDebit || totalValue !== totalCredit) {
                errorMessage = "Total Amount should be equal to Total Debit and Credit.";
                isValid = false;
            } else if (!hasValidSubaccount) {
                errorMessage = "Must include AP-Non Trade Payable with credit.";
                isValid = false;
            }

            // Display or clear the error message
            $("#balance-error-message").text(errorMessage);

            // Optionally disable/enable the submit button based on validation
            $("button[type='submit']").prop("disabled", !isValid);

            return isValid;
        }
    </script>
    <script>
        $("#AccountNo").on("change", seeIfNeedSupplier);
        $(document).on("input change", "#totalAmount", validateDebitAndCredit);
        $(document).on("click", "#modalClose", function (){
            $("#AccountNo").val("");
            $("#Category").val("");
            $("#MultipleSupplierId").val("");
            $("#AccountNo, #Category, #MultipleSupplierId").trigger("change");
            $("#debit").val("0.0000");
            $("#credit").val("0.0000");
            if ($("#selectionGroup").length !== 0) {
                $("#selectionGroup").remove();
            }
        });
    </script>
    <script>
        // Format number on blur (when user leaves the field)
        $(document).on("blur", ".editable-amount", function() {
            var value = parseNumber($(this).val());
            $(this).val(formatNumber(value));
            updateTotalDebitAndCredit();
        });
    
        // Recalculate on any input change
        $(document).on("input", ".editable-amount", function() {
            updateTotalDebitAndCredit();
        });
    </script>
}