    <script>
        $(document).ready(function () {
            let fileInfos = @Html.Raw(JsonSerializer.Serialize(Model.FileInfos));
            
            const DragOverlayHandler = (function () {
                const $overlay = $('#dragOverlay');
                const $fileUploadArea = $('#fileUploadArea');
                const $fileChoosingArea = $('#fileChoosingArea');
                const $fileInput = $('#UploadedFiles'); // Input for uploads
                const $previewContainer = $('#previewContainer');
                const $fileLink = $('.file-link');
                const $newAttachmentGroup = $('#newAttachmentGroup');
                const $arrayOfFileNames = $('#arrayOfFileNames');
                let uploadedFiles = []; // Array to store all uploaded files
                let enableUploadNewAttachment = true; // Used in condition to enable uploading, TEMPORARILY TRUE FOR DEBUGGING

                // For the existing, create an instance of {} with FileName as its name property
                uploadedFiles = fileInfos.map(fileInfo => ({
                    name: fileInfo.FileName
                }));

                // Add each of the name to the array of file strings
                uploadedFiles.forEach(function(uploadedFile, index) {
                    $arrayOfFileNames.push(uploadedFile);
                    displayExistingFileName(uploadedFile.name);
                });
                
                document.getElementById("arrayOfFileNames").value = JSON.stringify(uploadedFiles.map(file => file.name)); // assign the array value to the input

                function init() {
                    bindEvents();
                }

                function bindEvents() {
                    $(document)
                        .on('dragenter', onDragEnter)
                        .on('dragover', onDragOver)
                        .on('dragleave', onDragLeave)
                        .on('drop', onDrop);
                    $fileUploadArea.on('paste', onPaste);
                    $fileChoosingArea.on('click', triggerFileInput);
                    $fileInput.on('change', onFileInputChange);
                    $(document).on('click', '.file-link', showUpload);
                    $(document).on('click', '.remove-file', removeFile);
                }

                // Trigger file input on clicking the contenteditable div
                function triggerFileInput() {
                    $fileInput.click(); 
                }

                function onFileInputChange(event) {
                    const files = event.target.files;
                    if (files.length > 0) {
                        handleFiles(files);
                    }
                }

                function clearText(event) {
                    // Clear any text pasted into the contenteditable div to keep it clean
                    if ($fileUploadArea.text().trim() !== '') {
                        $fileUploadArea.text('');
                    }
                }

                // Displaying new files
                function showUpload(event) {
                    const fileName = $(event.currentTarget).data('name');
                    const file = uploadedFiles.find(f => f.name === fileName); // See if 'name' is in the stored files

                    if (!file) {
                        console.warn('File not found:', fileName);
                        return;
                    }

                    const imageUrl = URL.createObjectURL(file);
                    window.open(imageUrl, '_blank');
                }

                // General for what to do with uploaded files
                function handleFiles(files) {
                    // Checking if allowed to upload
                    if(!enableUploadNewAttachment){
                        const Toast = Swal.mixin({
                            toast: true,
                            position: "top-end",
                            showConfirmButton: false,
                            timer: 2000,
                            didOpen: (toast) => {
                                toast.onmouseenter = Swal.stopTimer;
                                toast.onmouseleave = Swal.resumeTimer;
                            }
                        });
                        Toast.fire({
                            icon: "error",
                            title: "Uploading is disabled"
                        });
                        return;
                    }

                    // Convert list of files to array
                    const fileArray = Array.from(files);

                    // Variable of new uploads, check the current array if already existing
                    const newFiles = fileArray.filter(file =>
                        !uploadedFiles.some(existing =>
                            existing.name === file.name && existing.size === file.size
                        )
                    );

                    // Add new files to current array
                    uploadedFiles = uploadedFiles.concat(newFiles);
                    // Initialize DataTransfer
                    const dataTransfer = new DataTransfer();
                    // Store files in the transfer object
                    uploadedFiles.forEach(file => {
                        if (file instanceof File) { // Validate File object
                            dataTransfer.items.add(file);
                        }
                    });
                    
                    $fileInput[0].files = dataTransfer.files; // Store the transfer objects in the html input
                    const fileNames = newFiles.map(file => file.name); // Get names of new files
                    fileNames.forEach(fileName => displayFileName({ name: fileName })); // Create elements for each new files
                    $fileUploadArea.data('file', fileNames); // Store the array of new names
                    $fileUploadArea.data('allFiles', uploadedFiles.map(file => file.name)); // Store the array of all names
                    // Assign the names of the uploaded entites to array of strings
                    document.getElementById("arrayOfFileNames").value = JSON.stringify(uploadedFiles.map(file => file.name));
                }

                // Create html element for new file
                function displayFileName(file) {
                    const container = document.createElement('div');
                    container.className = 'file-item d-inline-flex align-items-center me-2 mb-3';

                    const fileElement = document.createElement('a');
                    fileElement.textContent = file.name;
                    fileElement.className = 'file-link btn btn-outline-primary border me-1 shadow';
                    fileElement.setAttribute('data-name', file.name);

                    const removeBtn = document.createElement('a');
                    removeBtn.textContent = '×';
                    removeBtn.className = 'remove-file btn btn-outline-danger btn-sm me-2 shadow';
                    removeBtn.setAttribute('data-name', file.name);

                    container.appendChild(fileElement);
                    container.appendChild(removeBtn);

                    $previewContainer.append(container);
                }

                // Create html element for new file
                function displayExistingFileName(fileName) {
                    let fileInfo = fileInfos.find(f => f.FileName === fileName);
                    
                    let signedUrl = fileInfo.SignedUrl;

                    const container = document.createElement('div');
                    container.className = 'file-item d-inline-flex align-items-center me-2 mb-3';

                    const fileElement = document.createElement('a');
                    fileElement.textContent = fileInfo.FileName;
                    fileElement.className = 'btn btn-outline-primary border me-1 shadow';
                    fileElement.href = signedUrl;
                    fileElement.target = '_blank';
                    fileElement.setAttribute('data-name', fileInfo.FileName);

                    const removeBtn = document.createElement('a');
                    removeBtn.textContent = '×';
                    removeBtn.className = 'remove-file btn btn-outline-danger btn-sm me-2 shadow';
                    removeBtn.setAttribute('data-name', fileInfo.FileName);

                    container.appendChild(fileElement);
                    container.appendChild(removeBtn);

                    $previewContainer.append(container);
                }

                // Remove the file from array: the elements will be removed when fileInput is changed
                function removeFile(event) {
                    event.preventDefault();
                    const fileName = $(this).data('name'); // Get file name
                    uploadedFiles = uploadedFiles.filter(f => f.name !== fileName); // Filter out to remove the name
                    $(this).closest('.file-item').remove(); // Remove the div element 
                    $fileUploadArea.data('allFiles', uploadedFiles.map(file => file.name));
                    const dataTransfer = new DataTransfer(); // Initialize DataTransfer
                    uploadedFiles.forEach(file => {
                        if (file instanceof File) { // Validate File object
                            dataTransfer.items.add(file); // Assign all files to dataTransfer
                        }
                    });
                    $fileInput[0].files = dataTransfer.files; // Assign FileList to file input

                    uploadedFiles.forEach(function(uploadedFile) {
                        console.log(`Files: `, uploadedFile);
                    });
                    document.getElementById("arrayOfFileNames").value = JSON.stringify(uploadedFiles.map(file => file.name));
                    console.log(JSON.stringify(uploadedFiles.map(file => file.name)));
                }
                
                function onPaste(event) {
                    const clipboardData = event.originalEvent ? event.originalEvent.clipboardData : event.clipboardData;
                    if (!clipboardData) {
                        return;
                    }
                    if (clipboardData.files && clipboardData.files.length > 0) {
                        handleFiles(clipboardData.files);
                        event.preventDefault();
                        return;
                    }
                    const items = clipboardData.items;
                    if (!items || items.length === 0) {
                        return;
                    }
                    const files = [];
                    for (const item of items) {
                        const file = item.getAsFile();
                        if (file) {
                            files.push(file);
                        }
                    }
                    if (files.length > 0) {
                        handleFiles(files);
                        event.preventDefault();
                    }
                }

                function onDrop(event) {
                    event.preventDefault();
                    $overlay.css('display', 'none');
                    const files = event.originalEvent.dataTransfer.files;
                    if (files.length > 0) {
                        handleFiles(files);
                    }
                }

                function onDragEnter(event) {
                    event.preventDefault();
                    $overlay.css('display', 'flex');
                }

                function onDragOver(event) {
                    event.preventDefault();
                }

                function onDragLeave(event) {
                    if (!event.relatedTarget || $(event.relatedTarget).is('html')) {
                        $overlay.css('display', 'none');
                    }
                }

                return {
                    init,
                    getUploadedFiles: () => uploadedFiles // Expose for debugging
                };
            })();

            DragOverlayHandler.init();
        });
    </script>
}