<script>
    let totalBalance = 0;

    document.addEventListener("DOMContentLoaded", function () {
        $("#submitButton").on("click", checkIfExceed);
        let inputs = document.querySelectorAll(".moneyInput");
        let totalCell = document.getElementById("checkTotal");

        function updateTotal() {
            let total = 0;
            inputs.forEach(input => {
                const value = parseFloat(input.value.replace(/,/g, "")) || 0;
                total += value;
            });
            totalCell.textContent = total.toLocaleString("en-US", {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            });
            
            if (total === 0){
                $("#submitButton").trigger("change").prop("disabled", true);
            }
            else{
                $("#submitButton").trigger("change").prop("disabled", false);
            }
        }

        inputs.forEach(input => {
            input.addEventListener("input", updateTotal);
            input.addEventListener("change", updateTotal);
        });

        updateTotal();
    });

    function checkIfExceed (event){
        let balanceValue = parseFloat($("#balance").text().replace(/,/g, "")) || 0;
        let checkTotal = parseFloat($("#checkTotal").text().replace(/,/g, "")) || 0;
        event.preventDefault();
        const form = document.getElementById("myForm");

        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        if (checkTotal !== totalBalance){
            Swal.fire({
                title: "Error",
                text: "Total payment amount should be equal to the total balance.",
                icon: "error"
            });
        }
        else{
            if (checkTotal === 0 || totalBalance === 0){
                Swal.fire({
                    title: "Error",
                    text: "Total payment amount or total balance cannot be zero",
                    icon: "error"
                });
            }
            else{
                form.submit();
            }
        }
    }

    $(document).on("input", "input[name='SIMultipleAmount']", updateTotal2);

    function updateTotal2() {
        totalBalance = 0;

        $("input[name='SIMultipleAmount']").each(function () {
            let val = $(this).val().replace(/,/g, '');
            let num = parseFloat(val) || 0;
            totalBalance += num;
        });

        // Always refresh display, even if total didn't change
        $("#siTotal").text(formatNumber(totalBalance));
    }
</script>

<script>
    $(document).on("blur change", "[name='SIMultipleAmount']", function () {
        let numValue = parseNumber($(this).val());
        let maxValue = parseFloat($(this).attr("data-max")) || 0;

        if (numValue > maxValue) {
            $(this).val(formatNumber(maxValue)); // auto-correct
            setTimeout(() => {
                updateTotal2();
            }, 200);
            Swal.fire({
                title: "Error",
                text: "Amount cannot exceed the balance",
                icon: "error"
            });
        } else {
            $(this).val(formatNumber(numValue)); // format nicely on blur
        }

        if (numValue === 0){
            $(this).val(formatNumber(1)); // auto-correct
            setTimeout(() => {
                updateTotal2();
            }, 200);
            Swal.fire({
                title: "Error",
                text: "Balance to pay cannot be zero",
                icon: "error"
            });
