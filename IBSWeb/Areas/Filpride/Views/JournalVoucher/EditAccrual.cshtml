@using IBS.Models.Enums
@model JvEditAccrualViewModel

@{
    ViewData["Title"] = "Journal Voucher - Edit Accrual";
}

<link rel="stylesheet" href="~/css/form-style.css">

<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="JvId" type="hidden" />
                    <div class="form-group mb-3">
                        <label asp-for="TransactionDate" class="control-label"></label><span class="required">*</span>
                        <input asp-for="TransactionDate"
                               type="Date"
                               class="form-control"
                               min="@Model.MinDate.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="References" type="text" class="form-control" placeholder="" />
                        <span asp-validation-for="References" class="text-danger"></span>
                        <label asp-for="References" class="control-label"></label>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">CV No.</label><span class="required">*</span>
                        <select asp-for="CvId" asp-items="@Model.CvList" class="form-select js-select2 checkVoucher" style="width:100%" required>
                            <option></option>
                        </select>
                        <span asp-validation-for="CvId" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="CrNo" type="text" class="form-control" placeholder="" />
                        <label asp-for="CrNo" class="control-label">CR No.</label>
                        <span asp-validation-for="CrNo" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Reason" type="text" class="form-control" placeholder="Enter JV Reason" style="height: 100px"></textarea>
                        <label asp-for="Reason" class="control-label">Reason<span class="required">*</span></label>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-8 tradeList">
                    <div class="row pb-3 overflow-auto">

                        <div class="table-responsive">
                            <table class="w-100">
                                <thead>
                                    <tr style="border: 1px solid black;">
                                        <th colspan="2" style="padding-left:20px;">I. PAYEE DETAILS</th>
                                        <th colspan="1" class="text-end"><b>Date : </b></th>
                                        <td id="date"></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="width:11%; padding-left:20px;">Name :</td>
                                        <td id="name"></td>
                                        <td style="width:50%;" colspan="2" class="text-nowrap">Other References:</td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:20px;">Address :</td>
                                        <td id="address"></td>
                                        <td style="width:6%;">PO # :</td>
                                        <td id="poNo"></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:20px;">TIN # :</td>
                                        <td id="tinNo"></td>
                                        <td>SI # :</td>
                                        <td id="siNo"></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:20px;" class="text-nowrap"></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="table-responsive" style="margin-top:20px;">
                            <table class="w-100">
                                <thead>
                                    <tr style="border: 1px solid black;">
                                        <th colspan="4" style="padding-left:20px;">II. CHECK DETAILS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="width:15%; padding-left:20px;">Payee :</td>
                                        <td style="width:65%;" id="payee"></td>
                                        <td class="text-end" id="amount"></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:20px;"></td>

                                        <td class="w-25"></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:20px;">Particulars :</td>
                                        <td id="particulars"></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:20px;">Check #:</td>
                                        <td id="checkNo"></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="table-responsive" style="margin-top:20px;">
                            <table class="w-100">
                                <thead>
                                    <tr style="border: 1px solid black;">
                                        <th colspan="4" style="padding-left:20px;">III. ACCOUNTING ENTRIES</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="padding-left:20px;"></td>
                                        <th class="text-end">DEBIT</th>
                                        <th class="text-end">CREDIT</th>
                                    </tr>
                                </tbody>
                                <tbody id="tableBody"></tbody>
                                <tbody>
                                    <tr style="border-bottom:double;"></tr>
                                    <tr>
                                        <td class="text-end">TOTAL</td>
                                        <td class="text-end" id="totalDebit"></td>
                                        <td class="text-end" id="totalCredit"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

                <br />
                <div class="form-group table-responsive">
                    <table class="table" style="min-width: 800px">
                        <thead>
                            <tr>
                                <th class="w-50">Account No.</th>
                                <th class="w-25">Debit</th>
                                <th class="w-25">Credit</th>
                            </tr>
                        </thead>
                        <tbody id="accountingEntriesBody"></tbody>
                        <tbody>
                            <tr>
                                <td class="text-end">TOTAL:</td>
                                <td class="totalDebit">0.0000</td>
                                <td class="totalCredit">0.0000</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br />
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control" onclick="return validateDebitAndCredit(event)">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Filpride" asp-controller="JournalVoucher" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function updateTotalDebitAndCredit() {
            var totalDebit = 0;
            var totalCredit = 0;

            // Loop through each row in the table body and sum up the debit values
            $("#accountingEntriesBody tr").each(function () {
                var debitInput = $(this).find("td:eq(1) input").val();
                var creditInput = $(this).find("td:eq(2) input").val();

                // Ensure debitInput and creditInput are strings before using replace
                debitInput = debitInput ? String(debitInput) : ""; // convert to string if not null/undefined
                creditInput = creditInput ? String(creditInput) : "";

                var debit = parseNumber(debitInput);
                var credit = parseNumber(creditInput);

                totalDebit += debit;
                totalCredit += credit;
            });

            // Display the total debit value
            $(".totalDebit").text(formatNumberToFour(totalDebit));
            $(".totalCredit").text(formatNumberToFour(totalCredit));
            $("#debit").val("0.0000");
            $("#credit").val("0.0000");

            validateDebitAndCredit();
        }

        function cvDetails(cvId) {

            if (!cvId) {
                clearFields();
                return;
            }

            $.ajax({
                url: '@Url.Action("GetCV", "JournalVoucher", new { area = "Filpride" })',
                method: "GET",
                data: { id: cvId },
                success: function (data) {
                    let tableBody = $("#tableBody");
                    let accountingEntriesBody = $("#accountingEntriesBody");
                    tableBody.empty();
                    accountingEntriesBody.empty();

                    if (data === null) {
                        clearFields();
                        return;
                    }

                    $("#date").text(new Date(data.date).toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric' }));
                    $("#name").text(data.name);
                    $("#address").text(data.address);
                    $("#tinNo").text(data.tinNo);
                    $("#poNo").text(data.poNo);
                    $("#siNo").text(data.siNo);
                    $("#payee").text(data.payee);
                    $("#amount").text(formatNumber(data.amount));
                    $("#particulars").text(data.particulars);
                    $("#checkNo").text(data.checkNo);
                    $("#totalDebit").text(formatNumberToFour(data.totalDebit));
                    $("#totalCredit").text(formatNumberToFour(data.totalCredit));

                    const ACCRUAL_ACCOUNT_NO = "201020300";
                    const ACCRUAL_ACCOUNT_NAME = "AP - Accrued Expenses";
                    const ACCRUAL_ACCOUNT_TITLE = `${ACCRUAL_ACCOUNT_NO} ${ACCRUAL_ACCOUNT_NAME}`;

                    let rowIndex = 0;
                    let totalDebitSum = 0;

                    for (let i = 0; i < data.accountNo.length; i++) {

                        const accountNumber  = data.accountNo[i];
                        const accountTitle   = `${accountNumber} ${data.accountName[i]}`;
                        const debitFormatted = formatNumberToFour(parseNumber(String(data.debit[i] ?? "")));
                        const creditFormatted = formatNumberToFour(parseNumber(String(data.credit[i] ?? "")));

                        let previewRow = $("<tr></tr>");
                        previewRow.append(`<td style='width:60%; padding-left:20px;'>${accountTitle}</td>`);
                        previewRow.append(`<td class='text-end' style='width:7%;'>${debitFormatted}</td>`);
                        previewRow.append(`<td class='text-end' style='width:7%;'>${creditFormatted}</td>`);
                        tableBody.append(previewRow);

                        const debitVal = parseNumber(String(data.debit[i] ?? ""));
                        if (debitVal === 0) continue;

                        totalDebitSum += debitVal;

                        accountingEntriesBody.append(`
                            <tr>
                                <td>
                                    <input type='hidden' name='Details[${rowIndex}].AccountNo' value='${accountNumber}'/>
                                    <input type='text'   name='Details[${rowIndex}].AccountTitle' value='${accountTitle}'
                                           style='border:none' class='w-100' readonly />
                                </td>
                                <td>
                                    <input name='Details[${rowIndex}].Debit'
                                           id='debit_${accountNumber}'
                                           value='${debitFormatted}'
                                           style='border:none'
                                           class='w-100 money'
                                           readonly />
                                </td>
                                <td>
                                    <input name='Details[${rowIndex}].Credit'
                                           id='credit_${accountNumber}'
                                           value='0.0000'
                                           style='border:none'
                                           class='w-100 money'
                                           readonly />
                                </td>
                            </tr>`);

                        rowIndex++;
                    }

                    const creditTotal = formatNumberToFour(totalDebitSum);

                    accountingEntriesBody.append(`
                        <tr>
                            <td>
                                <input type='hidden' name='Details[${rowIndex}].AccountNo' value='${ACCRUAL_ACCOUNT_NO}'/>
                                <input type='text'   name='Details[${rowIndex}].AccountTitle' value='${ACCRUAL_ACCOUNT_TITLE}'
                                       style='border:none' class='w-100' readonly />
                            </td>
                            <td>
                                <input name='Details[${rowIndex}].Debit'
                                       id='debit_${ACCRUAL_ACCOUNT_NO}'
                                       value='0.0000'
                                       style='border:none'
                                       class='w-100 money'
                                       readonly />
                            </td>
                            <td>
                                <input name='Details[${rowIndex}].Credit'
                                       id='credit_${ACCRUAL_ACCOUNT_NO}'
                                       value='${creditTotal}'
                                       style='border:none'
                                       class='w-100 money'
                                       readonly />
                            </td>
                        </tr>`);

                    updateTotalDebitAndCredit();
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching cv:', error);
                }
            });
        }

        function clearFields() {
            $("#date").text("");
            $("#name").text("");
            $("#address").text("");
            $("#tinNo").text("");
            $("#poNo").text("");
            $("#siNo").text("");
            $("#payee").text("");
            $("#amount").text("");
            $("#particulars").text("");
            $("#checkNo").text("");
            $("#totalDebit").text("");
            $("#totalCredit").text("");
            $("#tableBody").empty();
            $("#accountingEntriesBody").empty();
        }

        $(".checkVoucher").each(function () {
            var cvId = $(this).val();
            cvDetails(cvId);
        });

        $(".checkVoucher").change(function () {
            var cvId = $(this).val();
            cvDetails(cvId);
        });

    </script>
    <script>
        
    </script>
    <script>
        function validateDebitAndCredit(event) {
            var totalDebit = parseNumber($(".totalDebit").text());
            var totalCredit = parseNumber($(".totalCredit").text());
            var errorMessage = "";
            var isValid = true;

            if ($("#balance-error-message").length === 0) {
                $("#accountingEntriesBody").after('<div id="balance-error-message" class="text-danger mt-2"></div>');
            }

            if (totalDebit !== totalCredit) {
                errorMessage = "Debit and Credit totals must be equal.";
                isValid = false;
            } else if (totalDebit === 0 || totalCredit === 0) {
                errorMessage = "Debit and Credit cannot be zero.";
                isValid = false;
            }

            // Display or clear the error message
            $("#balance-error-message").text(errorMessage);

            // Optionally disable/enable the submit button based on validation
            $("button[type='submit']").prop("disabled", !isValid);

            if (!isValid && event) {
                event.preventDefault();
            }

            return isValid;
        }
    </script>
    <script>    
        // Recalculate on any input change
        $(document).on("input", ".editable-amount", function() {
            updateTotalDebitAndCredit();
        });
    </script>
}
