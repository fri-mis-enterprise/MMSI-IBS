@model FilprideService

@{
    ViewData["Title"] = "Service - Create";
}

<link rel="stylesheet" href="~/css/form-style.css">

<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Type of Service<span class="required">*</span></label>
                <input asp-for="Name" class="form-control " placeholder="Enter the service type"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CurrentAndPreviousTitle" class="form-label">Current and Previous Title<span class="required">*</span></label>
                <select asp-for="CurrentAndPreviousId" asp-items="@Model.CurrentAndPreviousTitles" class="form-select js-select2" style="width: 100%" required>
                    <option value="">-- Select a title --</option>
                </select>
                <span asp-validation-for="CurrentAndPreviousTitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UnearnedTitle" class="form-label">Unearned Title<span class="required">*</span></label>
                <select asp-for="UnearnedId" asp-items="@Model.UnearnedTitles" class="form-select js-select2" style="width: 100%" required>
                    <option value="">-- Select a title --</option>
                </select>
                <span asp-validation-for="UnearnedTitle" class="text-danger"></span>
            </div>

            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">%</span>
                <input asp-for="Percent" type="text" class="form-control" placeholder="Percentage" aria-label="Percentage" aria-describedby="basic-addon1" required>
            </div>
            <label class="control-label">Please select where the record will be added:</label>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFilpride" /> FILPRIDE
                </label>
            </div>
            <div class="form-check pb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMobility" /> MOBILITY
                </label>
            </div>
            <div class="form-check pb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBienes" /> BIENES
                </label>
            </div>
            <div class="input-group mb-3">
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-area="Filpride" asp-controller="Service" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}