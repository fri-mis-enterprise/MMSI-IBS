@model IEnumerable<FilprideCheckVoucherDetail>
@using IBS.Models.Enums
@using IBS.Utility.Constants
@{
    ViewData["Title"] = "Check Voucher Non-Trade Payment";
}

<link rel="stylesheet" href="~/css/index-style.css">

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center bg-secondary p-3 rounded shadow">
        <div class="d-flex align-items-center">
            <h2 class="text-white m-0">@ViewData["Title"]</h2>
        </div>
        <div class="dropdown actions-dropdown">
            <button class="btn btn-light btn-sm dropdown-toggle w-100 responsive-index-button"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="bi bi-plus-circle"></i> Create
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                <li>
                    <a class="dropdown-item responsive-index-button" id="newAdvancesBtn">
                        <i class="bi bi-plus-circle"></i> New Advances
                    </a>
                    <a class="dropdown-item responsive-index-button" asp-area="Filpride" asp-controller="CheckVoucherNonTradePayment" asp-action="Create">
                        <i class="bi bi-plus-circle"></i> New Payment
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="card shadow border-0 mt-3">
        <div class="card-body p-3">
            <div class="me-2">
                <label class="fw-semibold small text-muted mb-1">Filter by Date</label>
                <input type="date" id="inputDate" class="form-control rounded-3 shadow-sm" style="width:150px;">
            </div>
            <div class="table-responsive" style="max-height: 70vh">
                <table class="table table-hover mb-0" id="paginatedTable">
                    <thead class="bg-light">
                    <tr>
                        <th class="text-start">CVN#</th>
                        <th class="text-start">Date</th>
                        <th class="text-start">Payee</th>
                        <th class="text-start">INV#</th>
                        <th class="text-start">Total</th>
                        <th class="text-start">Status</th>
                        <th class="text-center" style="width: 100px;">Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr class="bg-secondary text-white fw-bold">
                        <td class="py-3"></td>
                        <td class="py-3"></td>
                        <td class="py-3"></td>
                        <td class="text-end py-3">
                            <span class="text-uppercase">Grand Total:</span>
                        </td>
                        <td class="text-start py-3" id="totalAmount"></td>
                        <td class="py-3"></td>
                        <td class="py-3"></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmVoid(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Replace with the actual URL that you want to redirect to
                    var url = `@Url.Action("Void", "CheckVoucherNonTradePayment", new { area = "Filpride" })/${id}`;
                    window.location.href = url;
                }
            })
        }
    </script>
    <script>
        function confirmCancel(id) {
            Swal.fire({
                title: "Please Input Remarks",
                html:
                    "<input id='cancellationRemarks' type='text' class='swal2-input' placeholder='Remarks'>",
                focusConfirm: false,
                allowEscapeKey: false,
                allowOutsideClick: false,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    var cancellationRemarks = $("#cancellationRemarks").val();
                    // Encode the cancellationRemarks to make it URL safe
                    var encodedRemarks = encodeURIComponent(cancellationRemarks);
                    // Append the encoded remarks as a parameter in the URL
                    var url = `@Url.Action("Cancel", "CheckVoucherNonTradePayment", new { area = "Filpride" })?id=${id}&cancellationRemarks=${encodedRemarks}`;
                    window.location.href = url;
                }
            })
        }
    </script>
    <script>
        function confirmLiquidate(id) {
            Swal.fire({
                title: "Please Input Liquidation Date",
                html:
                    "<input id='liquidationDate' type='date' class='swal2-input' placeholder='Liquidation Date'>",
                focusConfirm: false,
                allowEscapeKey: false,
                allowOutsideClick: false,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    var liquidationDate = $("#liquidationDate").val();
                    // Encode the cancellationRemarks to make it URL safe
                    var encodedLiquidationDate = encodeURIComponent(liquidationDate);
                    // Append the encoded remarks as a parameter in the URL
                    var url = `@Url.Action("LiquidateAdvances", "CheckVoucherNonTradePayment", new { area = "Filpride" })?id=${id}&liquidateDate=${encodedLiquidationDate}`;
                    window.location.href = url;
                }
            })
        }
    </script>
    <script>
        $(document).ready(function () {
            let filterValue = localStorage.getItem('filterDate') || "";
            $('#inputDate').val(filterValue);
            
            let table = $('#paginatedTable').DataTable({
                "processing": true,
                "serverSide": true,
                "stateSave": true,
                "stateDuration": 86400,
                "language": {
                    "processing": `<div class="d-flex justify-content-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                 </div>`
                },
                "ajax": {
                    "url": "@Url.Action("GetPaymentCheckVouchers", "CheckVoucherNonTradePayment", new { area = "Filpride" })",
                    "type": "POST",
                    "data": function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),

                            // NEW PARAMETER FOR DATE — this goes to controller
                            filterDate: filterValue
                        });
                    },
                    "error": function (xhr, error, thrown) {
                        console.error('DataTables error:', error);
                        alert('An error occurred while loading the data');
                    }
                },
                "preDrawCallback": function(settings) {
                    $('#paginatedTable').addClass('table-loading');
                },
                "drawCallback": function(settings) {
                    $('#paginatedTable').removeClass('table-loading');

                    // Initialize all tooltips
                    $('[data-bs-toggle="tooltip"]').tooltip();
                },
                "columns": [
                    { "data": "checkVoucherHeaderNo" },
                    {
                        "data": "date",
                        "name": "date",
                        "render": function (data, type, row) {
                            // Assuming 'Date' is in ISO format like "2024-07-12T00:00:00"
                            var date = new Date(data);
                            return date.toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'short',
                                day: '2-digit' 
                            });
                        }
                    },
                    { "data": "payee" },
                    { 
                        "data": "reference",
                        "name": "reference",
                        "render": function (data, type, row) {
                            return data ?? ""; 
                        }
                    },
                    {
                        "data": "total",
                        "render": function (data, type, row) {
                            var amount = $.fn.dataTable.render.number(',', '.', 2).display(row.total);
                            return `<span class="d-block fw-medium">${amount}</span>`;
                        }
                    },
                    {
                        "data": "status",
                        "render": function (data, type, row) {
                            var statusClass = row.status === "@nameof(CheckVoucherPaymentStatus.Posted)" 
                                ? "bg-info" 
                                : row.status === "@nameof(CheckVoucherPaymentStatus.Voided)" || row.status === "@nameof(CheckVoucherPaymentStatus.Unliquidated)" 
                                    ? "bg-danger" 
                                    : row.status === "@nameof(CheckVoucherPaymentStatus.Canceled)" 
                                        ? "bg-warning" 
                                        : row.status === "@nameof(CheckVoucherPaymentStatus.Liquidated)" 
                                            ? "bg-success" 
                                            : "";

                            return `<span class="badge rounded-pill ${statusClass}">${row.status}</span>`;
                        }
                    },
                    {
                        "data": "checkVoucherHeaderId",
                        "orderable": false,
                        "render": function (data, type, row) {
                            return `<div class="dropdown actions-dropdown" style="${row.voidedBy != null || row.canceledBy != null ? 'display:none;' : ''}">
                                            <button class="btn btn-light btn-sm dropdown-toggle w-100" 
                                                        type="button" 
                                                        data-bs-toggle="dropdown" 
                                                        aria-expanded="false">
                                                    <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                              ${row.postedBy == null ?
                                                 `<li>
                                                   <a class="dropdown-item" href="${
                                                                                row.isAdvances
                                                                                    ? (row.employeeId
                                                                                        ? '@Url.Action("EditAdvancesToEmployee", "CheckVoucherNonTradePayment", new { area = "Filpride" })/'
                                                                                        : '@Url.Action("EditAdvancesToSupplier", "CheckVoucherNonTradePayment", new { area = "Filpride" })/')
                                                                                    : '@Url.Action("Edit", "CheckVoucherNonTradePayment", new { area = "Filpride" })/'
                                                                            }${row.checkVoucherHeaderId}">Edit</a>
                                                 </li>
                                                 <li>
                                                   <a class="dropdown-item" href="@Url.Action("Print", "CheckVoucherNonTradePayment", new { area = "Filpride" })?id=${row.checkVoucherHeaderId}">Preview</a>
                                                 </li>
                                                 <li>
                                                   <a class="dropdown-item" href="javascript:void(0);" onclick="confirmCancel(${row.checkVoucherHeaderId})">Cancel</a>
                                                 </li>` :
                                                `<li>
                                                   <a class="dropdown-item" href="@Url.Action("Print", "CheckVoucherNonTradePayment", new { area = "Filpride" })?id=${row.checkVoucherHeaderId}">Preview</a>
                                                 </li>
                                                 <li>
                                                   <a class="dropdown-item" href="javascript:void(0);" onclick="confirmVoid(${row.checkVoucherHeaderId})">Void</a>
                                                 </li>
                                                 ${row.isAdvances && row.status === "@nameof(CheckVoucherPaymentStatus.Unliquidated)" ? `
                                                    <li>
                                                        <a class="dropdown-item" href="javascript:void(0);" 
                                                           onclick="confirmLiquidate(${row.checkVoucherHeaderId})">
                                                           Liquidate
                                                        </a>
                                                    </li>
                                                ` : ``}
                                                 
                                                 `
                                              }
                                            </ul>
                                        </div>`;
                        }
                    }
                ],
                "order": [[0, "asc"]],
                "pageLength": 10,
                "footerCallback": function (row, data, start, end, display) {
                    // Initialize totals
                    var totalAmount = 0;

                    // Sum up columns
                    data.forEach(function (row) {
                        totalAmount += row.total;
                    });

                    // Update footer with totals
                    $(this.api().column(4).footer()).html(formatNumber(totalAmount));
                }
            });

            $('#inputDate').on('change', function() {
                filterValue = $(this).val();
                localStorage.setItem('filterDate', filterValue); // persist the date
                table.ajax.reload();
            });
        });
    </script>
    <script>
        document.getElementById("newAdvancesBtn").addEventListener("click", function () {
            Swal.fire({
                title: 'Select Advances',
                html: `
                    <select id="advancesSelect" class="swal2-select">
                        <option value="employee">Officers and Employee</option>
                        <option value="supplier">Supplier/Others</option>
                    </select>
                `,
                showCancelButton: true,
                confirmButtonText: 'Proceed',
                preConfirm: () => {
                    let selectedKey = document.getElementById("advancesSelect").value;
                    if (selectedKey) {
                        let routes = {
                            'employee': '@Url.Action("CreateAdvancesToEmployee", "CheckVoucherNonTradePayment", new { area = "Filpride" })',
                            'supplier': '@Url.Action("CreateAdvancesToSupplier", "CheckVoucherNonTradePayment", new { area = "Filpride" })'
                        };

                        window.location.href = routes[selectedKey];
                    } else {
                        Swal.showValidationMessage('You need to select an advances');
                    }
                }
            });
        });
    </script>
}